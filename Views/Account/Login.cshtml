@{
    ViewData["Title"] = "تسجيل الدخول - شجرة العائلة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-page">
    <div class="hilal-container">
        <div class="hilal-card">
            <div class="hilal-header">
                <!-- هلال جميل -->
                <div class="crescent-design"></div>

                <div class="hilal-logo">
                    <div class="logo-icon">
                        <i class="fas fa-tree"></i>
                    </div>
                    <div class="logo-text">شجرة العائلة</div>
                </div>
                <div class="hilal-subtitle">ارتباط • أصالة • استمرار</div>
                <div class="hilal-title">تسجيل الدخول</div>
            </div>

            <div class="hilal-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert-message alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>@ViewBag.Error</span>
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="form-group">
                        <div class="input-group">
                            <i class="fas fa-user input-icon"></i>
                            <input type="text" id="username" name="username" class="hilal-input" required
                                   placeholder="اسم المستخدم">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <i class="fas fa-lock input-icon"></i>
                            <input type="password" id="password" name="password" class="hilal-input" required
                                   placeholder="كلمة المرور">
                            <button type="button" class="password-toggle" id="togglePassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-options">
                        <label class="remember-me">
                            <input type="checkbox" id="rememberMe">
                            تذكر دخولي
                        </label>
                    </div>

                    <button type="submit" class="hilal-btn btn-primary login-btn">
                        <i class="fas fa-sign-in-alt"></i>
                        دخول إلى الشجرة
                    </button>
                </form>

                <div class="links-section">
                    <a asp-action="Register" asp-controller="Account" class="hilal-btn btn-secondary register-link">
                        <i class="fas fa-user-plus"></i>
                        إنشاء حساب جديد
                    </a>
                    <a href="#" class="hilal-btn btn-outline forgot-password-link">
                        <i class="fas fa-key"></i>
                        نسيت كلمة المرور؟
                    </a>
                </div>
            </div>
        </div>

        <!-- تم إزالة الفوتر من هنا -->
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // إظهار/إخفاء كلمة المرور
            const togglePassword = document.getElementById('togglePassword');
            const password = document.getElementById('password');

            if (togglePassword && password) {
                togglePassword.addEventListener('click', function() {
                    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                    password.setAttribute('type', type);
                    this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
                });
            }

            // تركيز على حقل اسم المستخدم
            const usernameInput = document.getElementById('username');
            if (usernameInput) {
                usernameInput.focus();
            }
        });
    </script>
}