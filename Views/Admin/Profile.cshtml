@{
    ViewData["Title"] = "الملف الشخصي";
    var user = ViewData["User"] as User;
}

<style>
    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 0;
        border-radius: 0 0 20px 20px;
        margin-bottom: 30px;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 5px solid white;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #667eea;
    }

    .stat-card {
        text-align: center;
        padding: 20px;
        border-radius: 15px;
        margin-bottom: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
</style>

<div class="profile-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <div class="profile-avatar mx-auto">
                    <i class="fas fa-user"></i>
                </div>
            </div>
            <div class="col-md-10">
                <h1 class="display-5">@user.FullName</h1>
                <p class="lead mb-0">
                    <i class="fas fa-user-circle me-2"></i>@user.Username
                    @if (user.IsAdmin)
                    {
                        <span class="badge bg-warning text-dark ms-2">👑 مدير النظام</span>
                    }
                </p>
                <p class="mb-0">
                    <i class="fas fa-envelope me-2"></i>@user.Email
                    <i class="fas fa-calendar-alt ms-3 me-2"></i>منضم منذ @user.CreatedDate.ToString("yyyy/MM/dd")
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- الإحصائيات -->
        <div class="col-md-4 mb-4">
            <div class="stat-card bg-primary text-white">
                <i class="fas fa-tree fa-3x mb-3"></i>
                <h2>@(user.FamilyTrees?.Count ?? 0)</h2>
                <p class="mb-0">شجرة عائلية</p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="stat-card bg-success text-white">
                <i class="fas fa-users fa-3x mb-3"></i>
                <h2>@(user.FamilyTrees?.Sum(ft => ft.Persons?.Count ?? 0) ?? 0)</h2>
                <p class="mb-0">فرد في الشجرات</p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="stat-card bg-info text-white">
                <i class="fas fa-chart-line fa-3x mb-3"></i>
                <h2>
                    @{
                        var treeCount = user.FamilyTrees?.Count ?? 0;
                        var personCount = user.FamilyTrees?.Sum(ft => ft.Persons?.Count ?? 0) ?? 0;
                        var avg = treeCount > 0 ? personCount / treeCount : 0;
                    }
                    @avg
                </h2>
                <p class="mb-0">متوسط الأفراد لكل شجرة</p>
            </div>
        </div>
    </div>

    <!-- المعلومات الشخصية -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>المعلومات الشخصية</h4>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">اسم المستخدم:</th>
                            <td>@user.Username</td>
                        </tr>
                        <tr>
                            <th>الاسم الكامل:</th>
                            <td>@user.FullName</td>
                        </tr>
                        <tr>
                            <th>البريد الإلكتروني:</th>
                            <td>@user.Email</td>
                        </tr>
                        <tr>
                            <th>تاريخ التسجيل:</th>
                            <td>@user.CreatedDate.ToString("yyyy/MM/dd HH:mm")</td>
                        </tr>
                        <tr>
                            <th>حالة الحساب:</th>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">✅ نشط</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">❌ معطل</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>الصلاحية:</th>
                            <td>
                                @if (user.IsAdmin)
                                {
                                    <span class="badge bg-warning text-dark">👑 مدير نظام</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">👤 مستخدم عادي</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- الشجرات العائلية -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-tree me-2"></i>الشجرات العائلية</h4>
                </div>
                <div class="card-body">
                    @if (user.FamilyTrees != null && user.FamilyTrees.Any())
                    {
                        <div class="list-group">
                            @foreach (var tree in user.FamilyTrees)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@tree.Name</h6>
                                        <small class="text-muted">تم الإنشاء: @tree.CreatedDate.ToString("yyyy/MM/dd")</small>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">@(tree.Persons?.Count ?? 0) فرد</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-tree fa-3x mb-3"></i>
                            <p>لا توجد شجرات عائلية</p>
                            <a href="#" class="btn btn-primary">إنشاء شجرة عائلية جديدة</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- أزرار الإجراءات -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a asp-action="Users" asp-controller="Admin" class="btn btn-primary me-2">
                <i class="fas fa-users me-1"></i>إدارة المستخدمين
            </a>
            <a asp-action="Statistics" asp-controller="Admin" class="btn btn-info me-2">
                <i class="fas fa-chart-bar me-1"></i>الإحصائيات
            </a>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                <i class="fas fa-home me-1"></i>الرئيسية
            </a>
        </div>
    </div>
</div>