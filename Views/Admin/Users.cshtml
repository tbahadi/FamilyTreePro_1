@{
    ViewData["Title"] = "إدارة المستخدمين";
    var users = ViewData["Users"] as List<User>;
}

<style>
    .table th {
        background-color: #2c3e50;
        color: white;
        text-align: center;
    }

    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">الرئيسية</a></li>
                    <li class="breadcrumb-item active">إدارة المستخدمين</li>
                </ol>
            </nav>

            <h1 class="text-center mb-4">👥 إدارة المستخدمين</h1>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    @if (users != null && users.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-list me-2"></i>قائمة المستخدمين</h4>
                        <span class="badge bg-light text-dark fs-6">@users.Count مستخدم</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>اسم المستخدم</th>
                                        <th>الاسم الكامل</th>
                                        <th>البريد الإلكتروني</th>
                                        <th>الإحصائيات</th>
                                        <th>الحالة</th>
                                        <th>الصلاحية</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in users)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@user.Username</strong>
                                                @if (user.IsAdmin)
                                                {
                                                    <span class="badge bg-warning text-dark ms-1">👑 مدير</span>
                                                }
                                            </td>
                                            <td>@user.FullName</td>
                                            <td>@user.Email</td>
                                            <td>
                                                @{
                                                    var treeCount = user.FamilyTrees?.Count ?? 0;
                                                    var personCount = user.FamilyTrees?.Sum(ft => ft.Persons?.Count ?? 0) ?? 0;
                                                }
                                                <div>
                                                    <span class="badge bg-primary me-1">@treeCount 🌳</span>
                                                    <span class="badge bg-info">@personCount 👥</span>
                                                </div>
                                            </td>
                                            <td>
                                                @if (user.IsActive)
                                                {
                                                    <span class="badge bg-success">نشط</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">معطل</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.IsAdmin)
                                                {
                                                    <span class="badge bg-warning text-dark">مدير نظام</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">مستخدم عادي</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("UserDetails", new { id = user.Id })"
                                                       class="btn btn-info" title="عرض التفاصيل">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (!user.IsAdmin)
                                                    {
                                                        <button class="btn btn-warning toggle-admin-btn"
                                                                data-userid="@user.Id"
                                                                data-isadmin="@user.IsAdmin.ToString().ToLower()"
                                                                title="@(user.IsAdmin ? "إلغاء الصلاحية" : "ترقية لمدير")">
                                                            <i class="fas @(user.IsAdmin ? "fa-user-times" : "fa-user-shield")"></i>
                                                        </button>
                                                        <button class="btn @(user.IsActive ? "btn-danger" : "btn-success") toggle-status-btn"
                                                                data-userid="@user.Id"
                                                                data-isactive="@user.IsActive.ToString().ToLower()"
                                                                title="@(user.IsActive ? "تعطيل" : "تفعيل")">
                                                            <i class="fas @(user.IsActive ? "fa-user-slash" : "fa-user-check")"></i>
                                                        </button>
                                                        <button class="btn btn-outline-danger delete-user-btn"
                                                                data-userid="@user.Id"
                                                                data-username="@user.Username"
                                                                title="حذف المستخدم">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted small">إجراءات محدودة</span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    <h4><i class="fas fa-exclamation-triangle me-2"></i>لا يوجد مستخدمين</h4>
                    <p class="mb-0">لم يتم العثور على أي مستخدمين في النظام.</p>
                </div>
            </div>
        </div>
    }

    <!-- أزرار التنقل -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a asp-action="Statistics" class="btn btn-info me-2">
                <i class="fas fa-chart-bar me-1"></i>الإحصائيات
            </a>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                <i class="fas fa-home me-1"></i>الرئيسية
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('صفحة إدارة المستخدمين محملة');

            // إضافة event listeners للأزرار
            const toggleAdminButtons = document.querySelectorAll('.toggle-admin-btn');
            const toggleStatusButtons = document.querySelectorAll('.toggle-status-btn');
            const deleteButtons = document.querySelectorAll('.delete-user-btn');

            toggleAdminButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    const userId = this.dataset.userid;
                    const isAdmin = this.dataset.isadmin === 'true';
                    const action = isAdmin ? 'إلغاء صلاحية المدير' : 'ترقية إلى مدير';

                    if (confirm(`هل أنت متأكد من ${action} لهذا المستخدم؟`)) {
                        // تنفيذ الإجراء عبر AJAX
                        alert(`سيتم ${action} للمستخدم ${userId}`);
                    }
                });
            });

            toggleStatusButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    const userId = this.dataset.userid;
                    const isActive = this.dataset.isactive === 'true';
                    const action = isActive ? 'تعطيل' : 'تفعيل';

                    if (confirm(`هل أنت متأكد من ${action} هذا الحساب؟`)) {
                        // تنفيذ الإجراء عبر AJAX
                        alert(`سيتم ${action} الحساب للمستخدم ${userId}`);
                    }
                });
            });

            deleteButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    const userId = this.dataset.userid;
                    const username = this.dataset.username;

                    if (confirm(`هل أنت متأكد من حذف المستخدم "${username}"؟ هذا الإجراء لا يمكن التراجع عنه.`)) {
                        // تنفيذ الإجراء عبر AJAX
                        alert(`سيتم حذف المستخدم ${username}`);
                    }
                });
            });
        });
    </script>
}