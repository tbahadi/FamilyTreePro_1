@model FamilyTreePro.Models.FamilyTree

@{
    ViewData["Title"] = "حذف شجرة عائلية";
}

<div class="container mt-4" dir="rtl">
    <h2 class="text-center mb-4">حذف شجرة عائلية</h2>

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> تحذير!</h4>
        <p>هل أنت متأكد من أنك تريد حذف الشجرة العائلية التالية؟</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4>@Model.Name</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">الوصف:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">تاريخ الإنشاء:</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy/MM/dd")</dd>

                <dt class="col-sm-3">عدد الأفراد:</dt>
                <dd class="col-sm-9">@Model.Persons?.Count</dd>

                @if (Model.ChildTrees?.Any() == true)
                {
                    <dt class="col-sm-3">الشجرات الفرعية:</dt>
                    <dd class="col-sm-9">@Model.ChildTrees.Count شجرة فرعية</dd>
                }
            </dl>

            @if (Model.Persons?.Any() == true || Model.ChildTrees?.Any() == true)
            {
                <div class="alert alert-warning">
                    <p><strong>ملاحظة:</strong> لا يمكن حذف الشجرة لأنها تحتوي على:</p>
                    <ul>
                        @if (Model.Persons?.Any() == true)
                        {
                            <li>@Model.Persons.Count فرد</li>
                        }
                        @if (Model.ChildTrees?.Any() == true)
                        {
                            <li>@Model.ChildTrees.Count شجرة فرعية</li>
                        }
                    </ul>
                    <p>يرجى حذف جميع الأفراد والشجرات الفرعية أولاً.</p>
                </div>
            }
        </div>
        <div class="card-footer">
            @if (!Model.Persons?.Any() == true && !Model.ChildTrees?.Any() == true)
            {
                <form asp-action="DeleteTreeConfirmed" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> نعم، احذف الشجرة
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
                </form>
            }
            else
            {
                <a asp-action="Index" class="btn btn-secondary">عودة للقائمة</a>
            }
        </div>
    </div>
</div>