@model FamilyTreePro.Models.FamilyTree

@{
    ViewData["Title"] = "حذف شجرة عائلية";
}

<div class="container mt-4" dir="rtl">
    <h2 class="text-center mb-4">حذف شجرة عائلية</h2>

    @if (ViewBag.CanDelete == false)
    {
        <div class="alert alert-danger">
            <h4><i class="fas fa-exclamation-triangle"></i> لا يمكن حذف هذه الشجرة</h4>
            <p>لا يمكن حذف الشجرة لأنها تحتوي على:</p>
            <ul>
                @if (ViewBag.PersonCount > 0)
                {
                    <li>@ViewBag.PersonCount فرد</li>
                }
                @if (ViewBag.ChildTreeCount > 0)
                {
                    <li>@ViewBag.ChildTreeCount شجرة فرعية</li>
                }
            </ul>
            <p class="mb-0">يرجى حذف جميع الأفراد والشجرات الفرعية أولاً.</p>
        </div>

        <div class="text-center">
            <a href="@Url.Action("Index", "Person", new { familyTreeId = Model.Id })" class="btn btn-info">
                <i class="fas fa-users"></i> عرض الأفراد
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="fas fa-arrow-right"></i> العودة للقائمة
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h4><i class="fas fa-exclamation-triangle"></i> تأكيد الحذف</h4>
            <p>هل أنت متأكد من أنك تريد حذف الشجرة العائلية التالية؟</p>
        </div>

        <div class="card">
            <div class="card-header" style="background-color: @Model.Color;">
                <h5 class="card-title text-white">@Model.Name</h5>
            </div>
            <div class="card-body">
                <p><strong>الوصف:</strong> @Model.Description</p>
                <p><strong>تاريخ الإنشاء:</strong> @Model.CreatedDate.ToString("yyyy/MM/dd")</p>
                <p class="text-danger"><strong>⚠️ سيتم حذف هذه الشجرة بشكل نهائي ولا يمكن التراجع عن هذا الإجراء.</strong></p>
            </div>
        </div>

        <form asp-action="DeleteTree" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> نعم، احذف الشجرة
                </button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                    <i class="fas fa-times"></i> إلغاء
                </a>
            </div>
        </form>
    }
</div>