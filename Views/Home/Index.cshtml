@model List<FamilyTreePro.Models.FamilyTree>

@{
    ViewData["Title"] = "الشجرات العائلية";
}

<div class="container mt-4 content-container" dir="rtl">
    <!-- النجوم المتحركة -->
    <div class="star star-1"></div>
    <div class="star star-2"></div>
    <div class="star star-3"></div>
    <div class="star star-4"></div>

    <div class="text-center mb-5">
        <h2 class="page-title">
            <i class="fas fa-tree me-2"></i>شجراتي العائلية
        </h2>
        <p class="text-muted">إدارة وتصفح جميع الشجرات العائلية الخاصة بك</p>
    </div>

    <!-- رسائل التنبيه المحسنة -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show hilal-alert" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2"></i>
                <div>@TempData["SuccessMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show hilal-alert" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>@TempData["ErrorMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- حالة عدم وجود شجرات -->
    @if (ViewBag.NoTrees == true)
    {
        <div class="card welcome-card text-center py-5">
            <div class="card-body">
                <div class="welcome-icon mb-4">
                    <i class="fas fa-tree"></i>
                </div>
                <h3 class="card-title mb-3">مرحباً بك في رحلة عائلتك!</h3>
                <p class="card-text text-muted mb-4">ابدأ رحلة اكتشاف تاريخ عائلتك بإنشاء أول شجرة عائلية</p>
                <a href="@Url.Action("CreateDefaultTree", "Home")" class="btn btn-primary btn-lg me-3">
                    <i class="fas fa-magic me-2"></i>إنشاء شجرة عائلية افتراضية
                </a>
                <a href="@Url.Action("CreateFamilyTree", "Home")" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-plus-circle me-2"></i>إنشاء شجرة مخصصة
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- إحصائيات سريعة -->
        <div class="row mb-4">
            <div class="col-md-3 col-6">
                <div class="stat-card">
                    <div class="stat-icon text-primary">
                        <i class="fas fa-tree"></i>
                    </div>
                    <div class="stat-content">
                        <h4>@Model.Count</h4>
                        <p>شجرة عائلية</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-card">
                    <div class="stat-icon text-success">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h4>@(ViewBag.TotalPersons ?? 0)</h4>
                        <p>فرد إجمالي</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-card">
                    <div class="stat-icon text-info">
                        <i class="fas fa-network-wired"></i>
                    </div>
                    <div class="stat-content">
                        <h4>@(ViewBag.ConnectedTrees ?? 0)</h4>
                        <p>شجرة مرتبطة</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-card">
                    <div class="stat-icon text-warning">
                        <i class="fas fa-history"></i>
                    </div>
                    <div class="stat-content">
                        <h4>@(ViewBag.RecentTrees ?? 0)</h4>
                        <p>مضافة حديثاً</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- شبكة الشجرات العائلية -->
        <div class="row">
            @foreach (var tree in Model)
            {
                var personCount = ViewBag.PersonCounts != null && ViewBag.PersonCounts.ContainsKey(tree.Id)
                ? ViewBag.PersonCounts[tree.Id]
                : tree.Persons?.Count ?? 0;

                <div class="col-xl-4 col-lg-6 mb-4">
                    <div class="family-tree-card card h-100">
                        <div class="card-header" style="background: linear-gradient(135deg, @tree.Color 0%, @AdjustColor(tree.Color, -20) 100%);">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title text-white mb-0">
                                    <i class="fas fa-tree me-2"></i>@tree.Name
                                </h5>
                                <span class="badge bg-light text-dark">
                                    <i class="fas fa-users me-1"></i>@personCount
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text tree-description">@(string.IsNullOrEmpty(tree.Description) ? "لا يوجد وصف" : tree.Description)</p>

                            <!-- معلومات الشجرة -->
                            <div class="tree-info">
                                <div class="info-item">
                                    <i class="fas fa-calendar text-muted me-2"></i>
                                    <small>تم الإنشاء: @tree.CreatedDate.ToString("yyyy/MM/dd")</small>
                                </div>
                                @if (tree.ParentTree != null)
                                {
                                    <div class="info-item">
                                        <i class="fas fa-link text-success me-2"></i>
                                        <small>مرتبطة بـ: @tree.ParentTree.Name</small>
                                    </div>
                                }
                                @if (tree.ChildTrees?.Any() == true)
                                {
                                    <div class="info-item">
                                        <i class="fas fa-network-wired text-info me-2"></i>
                                        <small>لها @tree.ChildTrees.Count شجرة فرعية</small>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group-vertical w-100" role="group">
                                <div class="btn-group w-100" role="group">
                                    <a href="@Url.Action("Index", "Person", new { familyTreeId = tree.Id })"
                                       class="btn btn-outline-success btn-action">
                                        <i class="fas fa-list me-1"></i>القائمة
                                    </a>
                                    <a href="@Url.Action("FamilyTreeView", "Person", new { familyTreeId = tree.Id })"
                                       class="btn btn-outline-info btn-action">
                                        <i class="fas fa-project-diagram me-1"></i>الهرمي
                                    </a>
                                </div>
                                <div class="btn-group w-100 mt-2" role="group">
                                    <a href="@Url.Action("Create", "Person", new { familyTreeId = tree.Id })"
                                       class="btn btn-outline-primary btn-action">
                                        <i class="fas fa-plus me-1"></i>إضافة فرد
                                    </a>
                                    <a href="@Url.Action("ConnectTrees", "Home", new { id = tree.Id })"
                                       class="btn btn-outline-warning btn-action">
                                        <i class="fas fa-link me-1"></i>ربط
                                    </a>
                                    <a href="@Url.Action("DeleteTree", "Home", new { id = tree.Id })"
                                       class="btn btn-outline-danger btn-action"
                                       onclick="return confirm('هل أنت متأكد من حذف الشجرة العائلية \" @tree.Name\"؟')">
                                        <i class="fas fa-trash me-1"></i>حذف
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- أزرار الإجراءات الرئيسية -->
        <div class="text-center mt-5">
            <div class="action-buttons">
                <a href="@Url.Action("CreateFamilyTree", "Home")" class="btn btn-primary btn-lg me-3">
                    <i class="fas fa-plus-circle me-2"></i>إنشاء شجرة جديدة
                </a>
                <a href="@Url.Action("CheckDatabaseDirectly", "Home")" class="btn btn-outline-info btn-lg">
                    <i class="fas fa-database me-2"></i>فحص قاعدة البيانات
                </a>
            </div>
        </div>
    }
</div>

<style>
    /* تنسيقات مخصصة للصفحة */
    .page-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 1rem;
        position: relative;
    }

        .page-title:after {
            content: '';
            position: absolute;
            bottom: -10px;
            right: 50%;
            transform: translateX(50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 2px;
        }

    .welcome-card {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .welcome-icon {
        font-size: 4rem;
        color: #27ae60;
    }

    .family-tree-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .family-tree-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

    .tree-description {
        color: #555;
        line-height: 1.6;
        min-height: 60px;
    }

    .tree-info {
        border-top: 1px solid #eee;
        padding-top: 15px;
        margin-top: 15px;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 8px;
    }

    .btn-action {
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-action:hover {
            transform: translateY(-2px);
        }

    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        }

    .stat-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .stat-content h4 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .stat-content p {
        color: #7f8c8d;
        margin: 0;
        font-size: 0.9rem;
    }

    .hilal-alert {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .action-buttons {
        padding: 20px 0;
        border-top: 1px solid #eee;
    }

    /* النجوم المتحركة */
    .star {
        position: fixed;
        background-color: white;
        border-radius: 50%;
        animation: twinkle 3s infinite alternate;
        z-index: -1;
    }

    .star-1 {
        top: 10%;
        right: 5%;
        width: 3px;
        height: 3px;
        animation-delay: 0s;
    }

    .star-2 {
        top: 20%;
        right: 15%;
        width: 2px;
        height: 2px;
        animation-delay: 1s;
    }

    .star-3 {
        top: 15%;
        right: 25%;
        width: 4px;
        height: 4px;
        animation-delay: 2s;
    }

    .star-4 {
        top: 25%;
        right: 10%;
        width: 2px;
        height: 2px;
        animation-delay: 1.5s;
    }

    @@keyframes twinkle {
        from {
            opacity: 0.3;
            transform: scale(1);
        }

        to {
            opacity: 1;
            transform: scale(1.2);
        }
    }
</style>

@functions {
    // دالة مساعدة لتعديل الألوان
    public string AdjustColor(string color, int amount)
    {
        // يمكن تنفيذ منطق تعديل اللون هنا
        // للتبسيط، سنعود بلون ثابت
        return color;
    }
}