@model List<FamilyTreePro.Models.FamilyTree>

@{
    ViewData["Title"] = "الشجرات العائلية";
}

<div class="container mt-4" dir="rtl">
    <h2 class="text-center mb-4">شجراتي العائلية</h2>

    <!-- رسائل التنبيه -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.NoTrees == true)
    {
        <div class="alert alert-info text-center">
            <h4>مرحباً بك!</h4>
            <p>ليس لديك أي شجرة عائلية بعد. هل تريد إنشاء شجرة افتراضية؟</p>
            <a href="@Url.Action("CreateDefaultTree", "Home")" class="btn btn-primary btn-lg">
                <i class="fas fa-tree"></i> إنشاء شجرة عائلية افتراضية
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var tree in Model)
            {
                var personCount = ViewBag.PersonCounts != null && ViewBag.PersonCounts.ContainsKey(tree.Id)
                ? ViewBag.PersonCounts[tree.Id]
                : 0;

                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header" style="background-color: @tree.Color;">
                            <h5 class="card-title text-white">@tree.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@tree.Description</p>
                            <p class="text-muted"><small>تم الإنشاء: @tree.CreatedDate.ToString("yyyy/MM/dd")</small></p>

                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-info"><strong>عدد الأفراد: @personCount</strong></span>
                                <a href="@Url.Action("CheckDatabaseDirectly", "Home")" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-database"></i> فحص
                                </a>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100" role="group">
                                <a href="@Url.Action("Index", "Person", new { familyTreeId = tree.Id })" class="btn btn-success btn-sm">
                                    <i class="fas fa-users"></i> قائمة
                                </a>
                                <a href="@Url.Action("FamilyTreeView", "Person", new { familyTreeId = tree.Id })" class="btn btn-info btn-sm">
                                    <i class="fas fa-project-diagram"></i> هرمي
                                </a>
                                <a href="@Url.Action("Create", "Person", new { familyTreeId = tree.Id })" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> إضافة
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("CreateFamilyTree", "Home")" class="btn btn-outline-primary">
                <i class="fas fa-plus-circle"></i> إنشاء شجرة جديدة
            </a>
            <a href="@Url.Action("CheckDatabaseDirectly", "Home")" class="btn btn-outline-info">
                <i class="fas fa-database"></i> فحص قاعدة البيانات
            </a>
        </div>
    }
</div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var tree in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card" style="border-left: 4px solid @tree.Color;">
                        <div class="card-body">
                            <h5 class="card-title">@tree.Name</h5>
                            <p class="card-text">@tree.Description</p>

                            @if (tree.ParentTree != null)
                            {
                                <p class="text-success">
                                    <small><i class="fas fa-link"></i> مرتبطة بـ: @tree.ParentTree.Name</small>
                                </p>
                            }

                            @if (tree.ChildTrees?.Any() == true)
                            {
                                <p class="text-info">
                                    <small><i class="fas fa-network-wired"></i> لها @tree.ChildTrees.Count شجرة فرعية</small>
                                </p>
                            }

                            <p class="text-muted">
                                <small>
                                    <i class="fas fa-users"></i> @tree.Persons?.Count فرد
                                    - <i class="fas fa-calendar"></i> @tree.CreatedDate.ToString("yyyy/MM/dd")
                                </small>
                            </p>

                            <div class="btn-group w-100">
                                <a asp-controller="Person" asp-action="Index" asp-route-familyTreeId="@tree.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i> عرض
                                </a>
                                <a asp-action="ConnectTrees" asp-route-id="@tree.Id"
                                   class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-link"></i> ربط
                                </a>
                                <a asp-action="DeleteTree" asp-route-id="@tree.Id"
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('هل أنت متأكد من حذف الشجرة؟')">
                                    <i class="fas fa-trash"></i> حذف
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    <h4><i class="fas fa-tree"></i> لا توجد شجرات عائلية</h4>
                    <p><a asp-action="CreateFamilyTree" class="btn btn-primary">انقر هنا</a> لإنشاء أول شجرة عائلية لك</p>
                </div>
            </div>
        }
    </div>
</div>