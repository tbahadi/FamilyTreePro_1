@model List<FamilyTreePro.Models.FamilyTree>

@{
    ViewData["Title"] = "الشجرات العائلية";
}

<div class="container mt-4 content-container" dir="rtl">
    <!-- النجوم المتحركة -->
    <div class="star star-1"></div>
    <div class="star star-2"></div>
    <div class="star star-3"></div>
    <div class="star star-4"></div>

    <div class="text-center mb-5">
        <h2 class="page-title">
            <i class="fas fa-tree me-2"></i>شجراتي العائلية
        </h2>
        <p class="page-subtitle">إدارة وتصفح جميع الشجرات العائلية الخاصة بك</p>
    </div>

    <!-- رسائل التنبيه المحسنة -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show hilal-alert" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2"></i>
                <div>@TempData["SuccessMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show hilal-alert" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>@TempData["ErrorMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- حالة عدم وجود شجرات -->
    @if (ViewBag.NoTrees == true)
    {
        <div class="card welcome-card text-center py-5">
            <div class="card-body">
                <div class="welcome-icon mb-4">
                    <i class="fas fa-tree"></i>
                </div>
                <h3 class="card-title mb-3">مرحباً بك في رحلة عائلتك!</h3>
                <p class="card-text text-muted mb-4">ابدأ رحلة اكتشاف تاريخ عائلتك بإنشاء أول شجرة عائلية</p>
                <a href="@Url.Action("CreateDefaultTree", "Home")" class="btn btn-primary btn-lg me-3">
                    <i class="fas fa-magic me-2"></i>إنشاء شجرة عائلية افتراضية
                </a>
                <a href="@Url.Action("CreateFamilyTree", "Home")" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-plus-circle me-2"></i>إنشاء شجرة مخصصة
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- إحصائيات سريعة -->
        <div class="row mb-4">
            <div class="col-md-3 col-6">
                <div class="stat-card stat-card-1">
                    <div class="stat-icon">
                        <i class="fas fa-tree"></i>
                    </div>
                    <div class="stat-content">
                        <h4>@Model.Count</h4>
                        <p>شجرة عائلية</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-card stat-card-2">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h4>@(ViewBag.TotalPersons ?? 0)</h4>
                        <p>فرد إجمالي</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-card stat-card-3">
                    <div class="stat-icon">
                        <i class="fas fa-network-wired"></i>
                    </div>
                    <div class="stat-content">
                        <h4>@(ViewBag.ConnectedTrees ?? 0)</h4>
                        <p>شجرة مرتبطة</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-card stat-card-4">
                    <div class="stat-icon">
                        <i class="fas fa-history"></i>
                    </div>
                    <div class="stat-content">
                        <h4>@(ViewBag.RecentTrees ?? 0)</h4>
                        <p>مضافة حديثاً</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- جدول الشجرات العائلية -->
        <div class="card table-card">
            <div class="card-header table-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-table me-2"></i>قائمة الشجرات العائلية
                </h5>
                <div class="table-actions">
                    <a href="@Url.Action("CreateFamilyTree", "Home")" class="btn btn-success btn-sm">
                        <i class="fas fa-plus me-1"></i>شجرة جديدة
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th width="50">
                                    <i class="fas fa-palette"></i>
                                </th>
                                <th>اسم الشجرة</th>
                                <th>الوصف</th>
                                <th width="120">عدد الأفراد</th>
                                <th width="120">الحالة</th>
                                <th width="150">تاريخ الإنشاء</th>
                                <th width="250" class="text-center">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tree in Model)
                            {
                                var personCount = ViewBag.PersonCounts != null && ViewBag.PersonCounts.ContainsKey(tree.Id)
                                ? ViewBag.PersonCounts[tree.Id]
                                : tree.Persons?.Count ?? 0;

                                <tr>
                                    <td>
                                        <div class="color-badge" style="background-color: @tree.Color;" title="لون الشجرة"></div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-tree text-muted me-2"></i>
                                            <div>
                                                <strong class="d-block">@tree.Name</strong>
                                                @if (tree.ParentTree != null)
                                                {
                                                    <small class="text-muted">
                                                        <i class="fas fa-link text-success me-1"></i>مرتبطة بـ @tree.ParentTree.Name
                                                    </small>
                                                }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="tree-description" title="@tree.Description">
                                        @(string.IsNullOrEmpty(tree.Description) ? "لا يوجد وصف" :
                                                                            (tree.Description.Length > 50 ? tree.Description.Substring(0, 50) + "..." : tree.Description))
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-person-count">
                                            <i class="fas fa-users me-1"></i>@personCount
                                        </span>
                                    </td>
                                    <td>
                                        @if (tree.ParentTree != null)
                                        {
                                            <span class="badge bg-linked">
                                                <i class="fas fa-link me-1"></i>مرتبطة
                                            </span>
                                        }
                                        else if (tree.ChildTrees?.Any() == true)
                                        {
                                            <span class="badge bg-parent">
                                                <i class="fas fa-sitemap me-1"></i>أم
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-single">
                                                <i class="fas fa-tree me-1"></i>منفردة
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @tree.CreatedDate.ToString("yyyy/MM/dd")
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Index", "Person", new { familyTreeId = tree.Id })"
                                               class="btn btn-outline-primary" title="عرض الأفراد">
                                                <i class="fas fa-list"></i>
                                            </a>
                                            <a href="@Url.Action("FamilyTreeView", "Person", new { familyTreeId = tree.Id })"
                                               class="btn btn-outline-info" title="العرض الهرمي">
                                                <i class="fas fa-project-diagram"></i>
                                            </a>
                                            <a href="@Url.Action("Create", "Person", new { familyTreeId = tree.Id })"
                                               class="btn btn-outline-success" title="إضافة فرد">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                            <a href="@Url.Action("ConnectTrees", "Home", new { id = tree.Id })"
                                               class="btn btn-outline-warning" title="ربط الشجرة">
                                                <i class="fas fa-link"></i>
                                            </a>
                                            <a href="@Url.Action("DeleteTree", "Home", new { id = tree.Id })"
                                               class="btn btn-outline-danger"
                                               title="حذف الشجرة"
                                               onclick="return confirm('هل أنت متأكد من حذف الشجرة العائلية \" @tree.Name\"؟')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <small class="text-muted">
                            إجمالي <strong>@Model.Count</strong> شجرة عائلية
                        </small>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <small class="text-muted">
                            آخر تحديث: @DateTime.Now.ToString("yyyy/MM/dd HH:mm")
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- أزرار الإجراءات الرئيسية -->
        <div class="text-center mt-4">
            <div class="action-buttons">
                <a href="@Url.Action("CreateFamilyTree", "Home")" class="btn btn-primary btn-lg me-3">
                    <i class="fas fa-plus-circle me-2"></i>إنشاء شجرة جديدة
                </a>
                <a href="@Url.Action("CheckDatabaseDirectly", "Home")" class="btn btn-database btn-lg">
                    <i class="fas fa-database me-2"></i>فحص قاعدة البيانات
                </a>
            </div>
        </div>
    }
</div>

<style>
    /* تنسيقات مخصصة للصفحة */
    .page-title {
        color: #000000 !important;
        font-weight: 800 !important;
        margin-bottom: 0.5rem;
        position: relative;
        font-size: 2.2rem !important;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
    }

    .page-subtitle {
        color: #333333 !important;
        font-weight: 600 !important;
        font-size: 1.2rem !important;
        margin-bottom: 2rem;
    }

    .page-title:after {
        content: '';
        position: absolute;
        bottom: -10px;
        right: 50%;
        transform: translateX(50%);
        width: 100px;
        height: 4px;
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%); /* تدرج بني خشبي */
        border-radius: 2px;
    }

    .welcome-card {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border: 2px dashed #dee2e6;
    }

    .welcome-icon {
        font-size: 4rem;
        color: #8B4513; /* بني خشبي */
    }

    /* تنسيقات البطاقات الإحصائية بألوان جديدة */
    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: none;
        position: relative;
        overflow: hidden;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 4px;
        }

    .stat-card-1 {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* أرجواني */
        color: white;
    }

    .stat-card-2 {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); /* وردي/أحمر */
        color: white;
    }

    .stat-card-3 {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); /* أزرق/سماوي */
        color: white;
    }

    .stat-card-4 {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); /* أخضر/تركواز */
        color: white;
    }

    .stat-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }

    .stat-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
        opacity: 0.9;
    }

    .stat-content h4 {
        font-weight: 800;
        color: white;
        margin-bottom: 5px;
        font-size: 2rem;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .stat-content p {
        color: rgba(255,255,255,0.9);
        margin: 0;
        font-size: 0.95rem;
        font-weight: 600;
    }

    /* تنسيقات الجدول */
    .table-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        overflow: hidden;
        background: white;
    }

    .table-header {
        background: linear-gradient(135deg, #2C5530 0%, #4A7C59 100%); /* أخضر طبيعي */
        color: white;
        border-bottom: none;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .table-header .card-title {
            color: white;
            margin: 0;
            font-weight: 700;
        }

    .table-actions .btn {
        border-radius: 8px;
        font-weight: 600;
        background: rgba(255,255,255,0.2);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
    }

        .table-actions .btn:hover {
            background: rgba(255,255,255,0.3);
            transform: translateY(-1px);
        }

    .table th {
        border-bottom: 3px solid #2C5530;
        font-weight: 700;
        color: #000000;
        padding: 15px 12px;
        background: #f8f9fa;
    }

    .table td {
        padding: 15px 12px;
        vertical-align: middle;
        border-color: #f1f1f1;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
        transform: translateY(-1px);
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .color-badge {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 2px 6px rgba(0,0,0,0.2);
        transition: transform 0.2s ease;
    }

        .color-badge:hover {
            transform: scale(1.2);
        }

    .tree-description {
        color: #555;
        line-height: 1.4;
        display: block;
        max-width: 200px;
    }

    /* ألوان جديدة للشارات */
    .bg-person-count {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }

    .bg-linked {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%) !important;
    }

    .bg-parent {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%) !important;
    }

    .bg-single {
        background: linear-gradient(135deg, #a8a8a8 0%, #696969 100%) !important;
    }

    /* زر فحص قاعدة البيانات الجديد */
    .btn-database {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%) !important; /* بني خشبي */
        color: white !important;
        border: 2px solid #8B4513 !important;
        border-radius: 10px !important;
        padding: 12px 30px !important;
        font-weight: 600 !important;
        font-size: 1.1rem !important;
        transition: all 0.3s ease !important;
        box-shadow: 0 4px 15px rgba(139, 69, 19, 0.3) !important;
    }

        .btn-database:hover {
            background: linear-gradient(135deg, #A0522D 0%, #8B4513 100%) !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 6px 20px rgba(139, 69, 19, 0.4) !important;
            border-color: #8B4513 !important;
            color: white !important;
        }

    .btn-primary {
        background: linear-gradient(135deg, #2C5530 0%, #4A7C59 100%) !important; /* أخضر طبيعي */
        border: 2px solid #2C5530 !important;
        border-radius: 10px !important;
        padding: 12px 30px !important;
        font-weight: 600 !important;
        font-size: 1.1rem !important;
        transition: all 0.3s ease !important;
        box-shadow: 0 4px 15px rgba(44, 85, 48, 0.3) !important;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #4A7C59 0%, #2C5530 100%) !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 6px 20px rgba(44, 85, 48, 0.4) !important;
            border-color: #2C5530 !important;
        }

    .hilal-alert {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .action-buttons {
        padding: 20px 0;
        border-top: 1px solid #eee;
    }

    /* أزرار الجدول */
    .btn-group-sm > .btn {
        padding: 6px 8px;
        border-radius: 6px;
        font-size: 0.8rem;
        transition: all 0.2s ease;
    }

        .btn-group-sm > .btn:hover {
            transform: translateY(-1px);
        }

    /* النجوم المتحركة */
    .star {
        position: fixed;
        background-color: #8B4513; /* بني خشبي */
        border-radius: 50%;
        animation: twinkle 3s infinite alternate;
        z-index: -1;
    }

    .star-1 {
        top: 10%;
        right: 5%;
        width: 3px;
        height: 3px;
        animation-delay: 0s;
    }

    .star-2 {
        top: 20%;
        right: 15%;
        width: 2px;
        height: 2px;
        animation-delay: 1s;
    }

    .star-3 {
        top: 15%;
        right: 25%;
        width: 4px;
        height: 4px;
        animation-delay: 2s;
    }

    .star-4 {
        top: 25%;
        right: 10%;
        width: 2px;
        height: 2px;
        animation-delay: 1.5s;
    }

    @@keyframes twinkle {
        from {
            opacity: 0.3;
            transform: scale(1);
        }

        to {
            opacity: 1;
            transform: scale(1.2);
        }
    }

    /* تحسينات التجاوب */
    @@media (max-width: 768px) {
        .table-header {
            flex-direction: column;
            gap: 10px;
            text-align: center;
        }

        .table-responsive {
            font-size: 0.9rem;
        }

        .btn-group-sm > .btn {
            padding: 4px 6px;
            font-size: 0.75rem;
        }

        .tree-description {
            max-width: 150px;
        }

        .stat-content h4 {
            font-size: 1.5rem;
        }

        .stat-icon {
            font-size: 2rem;
        }

        .action-buttons .btn {
            width: 100%;
            margin-bottom: 10px;
        }
    }

    @@media (max-width: 576px) {
        .table td, .table th {
            padding: 10px 8px;
        }

        .tree-description {
            max-width: 120px;
        }

        .btn-group-sm > .btn {
            padding: 3px 5px;
            font-size: 0.7rem;
        }
    }
</style>

@functions {
    public string AdjustColor(string color, int amount)
    {
        return color;
    }
}