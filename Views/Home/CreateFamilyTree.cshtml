@model FamilyTreePro.Models.CreateFamilyTreeViewModel

@{
    ViewData["Title"] = "إنشاء شجرة عائلية جديدة";
}

<div class="container mt-4 content-container" dir="rtl">
    <!-- النجوم المتحركة -->
    <div class="star star-1"></div>
    <div class="star star-2"></div>
    <div class="star star-3"></div>
    <div class="star star-4"></div>

    <div class="text-center mb-4">
        <h2 class="page-title">إنشاء شجرة عائلية جديدة</h2>
        <p class="page-subtitle">ابدأ رحلة عائلتك بإنشاء شجرة عائلية جديدة</p>
    </div>

    <!-- عرض رسائل النجاح والخطأ -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show hilal-alert" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2"></i>
                <div>@TempData["SuccessMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show hilal-alert" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>@TempData["ErrorMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="form-container">
        <form asp-action="CreateFamilyTree" method="post" class="row g-3">
            @Html.AntiForgeryToken()

            <div class="col-md-12">
                <div class="form-group mb-4">
                    <label asp-for="Name" class="form-label">
                        <i class="fas fa-tree me-2"></i>اسم الشجرة العائلية
                    </label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="أدخل اسم الشجرة العائلية (مثال: عائلة آل محمد)" />
                    <div class="form-text">اختر اسماً مميزاً يمثل عائلتك</div>
                    <span asp-validation-for="Name" class="text-danger small mt-1"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group mb-4">
                    <label asp-for="Description" class="form-label">
                        <i class="fas fa-file-alt me-2"></i>وصف الشجرة
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="أدخل وصفاً للشجرة العائلية (اختياري) - مثال: شجرة عائلة آل محمد تضم جميع الفروع والأصول"></textarea>
                    <div class="form-text">يمكنك إضافة وصف مختصر عن العائلة أو تاريخها</div>
                    <span asp-validation-for="Description" class="text-danger small mt-1"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-4">
                    <label asp-for="Color" class="form-label">
                        <i class="fas fa-palette me-2"></i>لون الشجرة
                    </label>
                    <div class="color-picker-container">
                        <input type="color" asp-for="Color" class="form-control form-control-color" value="#0047ab" title="اختر لوناً للشجرة" />
                        <div class="color-presets mt-2">
                            <small class="text-muted d-block mb-2">ألوان مقترحة:</small>
                            <div class="d-flex gap-2 flex-wrap">
                                <span class="color-preset" data-color="#0047ab" title="أزرق الهلال"></span>
                                <span class="color-preset" data-color="#28a745" title="أخضر"></span>
                                <span class="color-preset" data-color="#dc3545" title="أحمر"></span>
                                <span class="color-preset" data-color="#ffc107" title="أصفر"></span>
                                <span class="color-preset" data-color="#6f42c1" title="بنفسجي"></span>
                                <span class="color-preset" data-color="#e91e63" title="وردي"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Color" class="text-danger small mt-1"></span>
                </div>
            </div>

            <div class="col-12">
                <div class="form-actions">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-tree me-2"></i> إنشاء الشجرة
                    </button>
                    <a asp-action="Index" class="btn btn-view-normal">
                        <i class="fas fa-arrow-right me-2"></i> إلغاء والعودة للقائمة
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    /* تنسيقات الصفحة */
    .page-title {
        color: #000000 !important;
        font-weight: 800 !important;
        margin-bottom: 0.5rem;
        position: relative;
        font-size: 2.2rem !important;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
    }

    .page-subtitle {
        color: #333333 !important;
        font-weight: 600 !important;
        font-size: 1.2rem !important;
        margin-bottom: 2rem;
    }

    .page-title:after {
        content: '';
        position: absolute;
        bottom: -10px;
        right: 50%;
        transform: translateX(50%);
        width: 100px;
        height: 4px;
        background: linear-gradient(135deg, #000000 0%, #333333 100%);
        border-radius: 2px;
    }

    .form-container {
        background: white;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border: 1px solid #e9ecef;
        max-width: 800px;
        margin: 0 auto;
    }

    /* تحسينات الحقول */
    .form-label {
        color: #000000 !important;
        font-weight: 700 !important;
        font-size: 1.1rem !important;
        margin-bottom: 10px;
    }

    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

        .form-control:focus {
            border-color: #0047ab;
            box-shadow: 0 0 0 0.2rem rgba(0, 71, 171, 0.25);
            background: white;
        }

    .form-control-lg {
        font-size: 1.1rem;
        padding: 15px;
    }

    .form-text {
        color: #666 !important;
        font-size: 0.85rem;
        margin-top: 5px;
    }

    /* محدد الألوان */
    .color-picker-container {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        border: 2px dashed #dee2e6;
    }

    .form-control-color {
        width: 80px;
        height: 80px;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        margin-bottom: 15px;
    }

    .color-presets {
        text-align: center;
    }

    .color-preset {
        display: inline-block;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        cursor: pointer;
        border: 3px solid transparent;
        transition: all 0.3s ease;
    }

        .color-preset:hover {
            transform: scale(1.2);
            border-color: #000;
        }

        .color-preset[data-color="#0047ab"] {
            background: #0047ab;
        }

        .color-preset[data-color="#28a745"] {
            background: #28a745;
        }

        .color-preset[data-color="#dc3545"] {
            background: #dc3545;
        }

        .color-preset[data-color="#ffc107"] {
            background: #ffc107;
        }

        .color-preset[data-color="#6f42c1"] {
            background: #6f42c1;
        }

        .color-preset[data-color="#e91e63"] {
            background: #e91e63;
        }

    /* أزرار التحكم */
    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid #f1f1f1;
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%) !important;
        border: 2px solid #1e7e34 !important;
        border-radius: 10px !important;
        padding: 12px 30px !important;
        font-weight: 600 !important;
        font-size: 1.1rem !important;
        transition: all 0.3s ease !important;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3) !important;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #1e7e34 0%, #155724 100%) !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4) !important;
            border-color: #155724 !important;
        }

    .btn-view-normal {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%) !important;
        color: white !important;
        border: 2px solid #495057 !important;
        border-radius: 10px !important;
        padding: 12px 25px !important;
        font-weight: 600 !important;
        font-size: 1.1rem !important;
        transition: all 0.3s ease !important;
        text-decoration: none !important;
        display: inline-flex !important;
        align-items: center !important;
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3) !important;
    }

        .btn-view-normal:hover {
            background: linear-gradient(135deg, #495057 0%, #343a40 100%) !important;
            color: white !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 6px 20px rgba(108, 117, 125, 0.4) !important;
            border-color: #343a40 !important;
        }

    /* التنبيهات */
    .hilal-alert {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        margin-bottom: 25px;
    }

    /* النجوم المتحركة */
    .star {
        position: fixed;
        background-color: #000000;
        border-radius: 50%;
        animation: twinkle 3s infinite alternate;
        z-index: -1;
    }

    .star-1 {
        top: 10%;
        right: 5%;
        width: 3px;
        height: 3px;
        animation-delay: 0s;
    }

    .star-2 {
        top: 20%;
        right: 15%;
        width: 2px;
        height: 2px;
        animation-delay: 1s;
    }

    .star-3 {
        top: 15%;
        right: 25%;
        width: 4px;
        height: 4px;
        animation-delay: 2s;
    }

    .star-4 {
        top: 25%;
        right: 10%;
        width: 2px;
        height: 2px;
        animation-delay: 1.5s;
    }

    @@keyframes twinkle {
        from {
            opacity: 0.3;
            transform: scale(1);
        }

        to {
            opacity: 1;
            transform: scale(1.2);
        }
    }

    /* تحسينات التجاوب */
    @@media (max-width: 768px) {
        .form-container {
            padding: 30px 20px;
            margin: 0 10px;
        }

        .page-title {
            font-size: 1.8rem !important;
        }

        .page-subtitle {
            font-size: 1.1rem !important;
        }

        .form-actions {
            flex-direction: column;
            gap: 10px;
        }

        .btn-success,
        .btn-view-normal {
            width: 100%;
            justify-content: center;
        }
    }

    @@media (max-width: 576px) {
        .form-container {
            padding: 20px 15px;
        }

        .page-title {
            font-size: 1.6rem !important;
        }

        .page-subtitle {
            font-size: 1rem !important;
        }

        .form-label {
            font-size: 1rem !important;
        }

        .form-control {
            padding: 10px 12px;
        }

        .color-picker-container {
            padding: 15px;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // اختيار الألوان المسبقة
            const colorPresets = document.querySelectorAll('.color-preset');
            const colorInput = document.querySelector('input[type="color"]');

            colorPresets.forEach(preset => {
                preset.addEventListener('click', function() {
                    const color = this.getAttribute('data-color');
                    colorInput.value = color;

                    // تأثير عند الاختيار
                    colorPresets.forEach(p => p.style.borderColor = 'transparent');
                    this.style.borderColor = '#000';
                });
            });

            // التحقق من الحقول قبل الإرسال
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const nameInput = document.querySelector('#Name');
                if (!nameInput.value.trim()) {
                    e.preventDefault();
                    nameInput.focus();
                    return false;
                }
            });

            console.log('تم تحميل صفحة إنشاء الشجرة العائلية');
        });
    </script>
}