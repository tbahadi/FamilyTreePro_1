@model IEnumerable<FamilyTreePro.Models.Person>

@{
    ViewData["Title"] = "قائمة الأفراد";
    var familyTreeId = ViewBag.FamilyTreeId;
    var familyTreeName = ViewBag.FamilyTreeName;
}

<div class="container mt-4" dir="rtl">
    <h2 class="text-center mb-4">@familyTreeName - قائمة الأفراد</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        <a href="@Url.Action("FamilyTreeView", "Person", new { familyTreeId = familyTreeId })" class="btn btn-success">
            <i class="fas fa-project-diagram"></i> الشجرة الهرمية
        </a>
        <a href="@Url.Action("Create", "Person", new { familyTreeId = familyTreeId })" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة فرد جديد
        </a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
            <i class="fas fa-arrow-right"></i> العودة للشجرات
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>الاسم الكامل</th>
                        <th>الجنس</th>
                        <th>تاريخ الميلاد</th>
                        <th>المهنة</th>
                        <th>الدولة</th>
                        <th>الأب</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var person in Model)
                    {
                        <tr>
                            <td>@person.FullName</td>
                            <td>@(person.Gender == "Male" ? "ذكر" : "أنثى")</td>
                            <td>@(person.BirthDate?.ToString("yyyy/MM/dd") ?? "غير معروف")</td>
                            <td>@(person.Occupation?.Name ?? "غير محدد")</td>
                            <td>@(person.Country?.Name ?? "غير محدد")</td>
                            <td>@(person.Father?.FullName ?? "غير محدد")</td>
                            <td>
                                @if (person.Id > 0)
                                {
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", "Person", new { id = person.Id })" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> تفاصيل
                                        </a>
                                        <a href="@Url.Action("Edit", "Person", new { id = person.Id })" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> تعديل
                                        </a>
                                        <a href="@Url.Action("Delete", "Person", new { id = person.Id })" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> حذف
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">لا توجد إجراءات</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>لا يوجد أفراد</h4>
            <p>لم يتم إضافة أي أفراد إلى هذه الشجرة بعد.</p>
            <a href="@Url.Action("Create", "Person", new { familyTreeId = familyTreeId })" class="btn btn-primary">
                <i class="fas fa-plus"></i> إضافة أول فرد
            </a>
        </div>
    }
</div>