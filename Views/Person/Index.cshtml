@model IEnumerable<FamilyTreePro.Models.Person>

@{
    ViewData["Title"] = "قائمة الأفراد";
    var familyTreeId = ViewBag.FamilyTreeId;
    var familyTreeName = ViewBag.FamilyTreeName;

    // ترتيب الأفراد حسب تاريخ الإنشاء (من الأقدم إلى الأحدث)
    var sortedPeople = Model?.OrderBy(p => p.CreatedDate);
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FamilyTreePro</title>

    <!-- Font Awesome للأيقونات -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* متغيرات الألوان */
        :root {
            --hilal-blue: #1e40af;
            --hilal-dark-blue: #1e3a8a;
            --hilal-gold: #d97706;
            --hilal-light: #f8fafc;
            --hilal-success: #10b981;
            --hilal-danger: #ef4444;
            --hilal-warning: #f59e0b;
            --hilal-info: #06b6d4;
            --hilal-pink: #ec4899;
        }

        /* التصميم العام */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            line-height: 1.6;
        }

        .content-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* بطاقة الهلال */
        .hilal-card {
            background: linear-gradient(135deg, #ffffff, #f8fafc);
            border-radius: 25px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            border: 3px solid var(--hilal-gold);
            overflow: hidden;
            margin-bottom: 30px;
        }

        .hilal-header {
            background: linear-gradient(135deg, var(--hilal-blue), var(--hilal-dark-blue));
            color: white;
            padding: 30px;
            text-align: center;
            position: relative;
        }

        .crescent-design {
            width: 100px;
            height: 50px;
            background: linear-gradient(135deg, var(--hilal-gold), #f59e0b);
            border-radius: 0 0 50px 50px;
            margin: 0 auto 20px;
            box-shadow: 0 5px 15px rgba(217, 119, 6, 0.3);
        }

        .hilal-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .hilal-subtitle {
            font-size: 1.3rem;
            opacity: 0.9;
            font-weight: 300;
        }

        .hilal-body {
            padding: 40px;
        }

        /* رسائل التنبيه */
        .alert-message {
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 1.1rem;
            border: 2px solid transparent;
        }

        .alert-success {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            border-color: var(--hilal-success);
            color: #065f46;
        }

        .alert-danger {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            border-color: var(--hilal-danger);
            color: #991b1b;
        }

        .alert-info {
            background: linear-gradient(135deg, #cffafe, #a5f3fc);
            border-color: var(--hilal-info);
            color: #155e75;
        }

        /* الأزرار الرئيسية */
        .main-actions {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 40px;
            flex-wrap: wrap;
        }

        .responsive-actions {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .hilal-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 15px 25px;
            border-radius: 25px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 1rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }

            .hilal-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
                transition: left 0.5s;
            }

            .hilal-btn:hover::before {
                left: 100%;
            }

            .hilal-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

        /* ألوان الأزرار */
        .btn-primary {
            background: linear-gradient(135deg, var(--hilal-blue), var(--hilal-dark-blue));
            color: white;
        }

        .btn-success {
            background: linear-gradient(135deg, var(--hilal-success), #059669);
            color: white;
        }

        .btn-info {
            background: linear-gradient(135deg, var(--hilal-info), #0891b2);
            color: white;
        }

        .btn-warning {
            background: linear-gradient(135deg, var(--hilal-warning), #d97706);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, var(--hilal-danger), #dc2626);
            color: white;
        }

        .btn-secondary {
            background: linear-gradient(135deg, #6b7280, #4b5563);
            color: white;
        }

        .btn-light {
            background: linear-gradient(135deg, #f8fafc, #e2e8f0);
            color: #374151;
            border: 2px solid #e5e7eb;
        }

        .btn-sm {
            padding: 10px 15px !important;
            font-size: 0.9rem !important;
        }

        .btn-lg {
            padding: 18px 35px !important;
            font-size: 1.2rem !important;
        }

        /* الجدول */
        .table-container {
            background: white;
            border-radius: 20px;
            padding: 0;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            border: 2px solid var(--hilal-gold);
            overflow: hidden;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .hilal-table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

            .hilal-table th {
                background: linear-gradient(135deg, var(--hilal-blue), var(--hilal-dark-blue));
                color: white;
                padding: 20px 15px;
                font-weight: 600;
                border: none;
                text-align: right;
                font-size: 1.1rem;
                position: relative;
            }

                .hilal-table th::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    right: 0;
                    width: 100%;
                    height: 3px;
                    background: linear-gradient(90deg, var(--hilal-gold), transparent);
                }

            .hilal-table td {
                padding: 18px 15px;
                border-bottom: 1px solid #e5e7eb;
                text-align: right;
                vertical-align: middle;
                transition: background-color 0.2s ease;
            }

            .hilal-table tr:hover td {
                background-color: #f8fafc;
            }

            .hilal-table tr:last-child td {
                border-bottom: none;
            }

        /* الشارات */
        .badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            display: inline-block;
        }

        .bg-primary {
            background: linear-gradient(135deg, var(--hilal-blue), var(--hilal-dark-blue)) !important;
            color: white;
        }

        .bg-pink {
            background: linear-gradient(135deg, var(--hilal-pink), #db2777) !important;
            color: white;
        }

        /* مجموعة الأزرار */
        .btn-group-custom {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        /* حالة عدم وجود بيانات */
        .empty-state {
            padding: 60px 20px;
            text-align: center;
        }

            .empty-state .fas {
                font-size: 4rem;
                margin-bottom: 20px;
                opacity: 0.7;
            }

        /* التصميم المتجاوب */
        @@media (max-width: 1200px) {
            .hilal-body {
                padding: 30px;
            }

            .main-actions {
                flex-direction: column;
            }

            .responsive-actions {
                justify-content: center;
            }
        }

        @@media (max-width: 768px) {
            body {
                padding: 10px;
            }

            .hilal-header {
                padding: 20px;
            }

            .hilal-title {
                font-size: 2rem;
            }

            .hilal-subtitle {
                font-size: 1.1rem;
            }

            .hilal-body {
                padding: 20px;
            }

            .main-actions {
                gap: 15px;
            }

            .responsive-actions {
                flex-direction: column;
                width: 100%;
            }

                .responsive-actions .hilal-btn {
                    width: 100%;
                    justify-content: center;
                    margin-bottom: 8px;
                }

            .table-responsive {
                font-size: 0.9rem;
                border-radius: 15px;
            }

            .hilal-table th,
            .hilal-table td {
                padding: 12px 8px;
            }

            .btn-group-custom {
                flex-direction: column;
                gap: 5px;
            }

                .btn-group-custom .hilal-btn {
                    width: 100%;
                    justify-content: center;
                }

            .empty-state {
                padding: 40px 15px;
            }

                .empty-state .fas {
                    font-size: 3rem;
                }
        }

        @@media (max-width: 576px) {
            .hilal-title {
                font-size: 1.8rem;
            }

            .hilal-subtitle {
                font-size: 1rem;
            }

            .hilal-btn {
                padding: 12px 20px;
                font-size: 0.9rem;
            }

            .alert-message {
                flex-direction: column;
                text-align: center;
                gap: 10px;
            }

            .table-responsive {
                font-size: 0.8rem;
            }

            .hilal-table th,
            .hilal-table td {
                padding: 8px 5px;
            }
        }

        /* تأثيرات إضافية */
        .text-muted {
            color: #6b7280 !important;
            font-style: italic;
        }

        .hilal-table strong {
            color: var(--hilal-dark-blue);
            font-weight: 700;
        }

        /* تأثيرات للهواتف */
        @@media (hover: hover) {
            .hilal-btn:hover {
                transform: translateY(-2px);
            }
        }

        /* طباعة */
        @@media print {
            body {
                background: white !important;
            }

            .hilal-card {
                box-shadow: none;
                border: 1px solid #000;
            }

            .hilal-btn {
                display: none !important;
            }

            .main-actions {
                display: none !important;
            }
        }
    </style>
</head>
<body>
    <div class="content-container">
        <div class="hilal-card">
            <div class="hilal-header">
                <!-- هلال جميل -->
                <div class="crescent-design"></div>

                <div class="hilal-title">@familyTreeName</div>
                <div class="hilal-subtitle">قائمة الأفراد</div>
            </div>

            <div class="hilal-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert-message alert-success">
                        <i class="fas fa-check-circle"></i>
                        <div>@TempData["SuccessMessage"]</div>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert-message alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        <div>@TempData["ErrorMessage"]</div>
                    </div>
                }

                <div class="main-actions">
                    <div class="responsive-actions">
                        <a href="@Url.Action("ProfessionalTree", "Person", new { familyTreeId = familyTreeId })" class="hilal-btn btn-success">
                            <i class="fas fa-sitemap"></i> الشجرة المتقدمة
                        </a>
                        <a href="@Url.Action("FamilyTreeView", "Person", new { familyTreeId = familyTreeId })" class="hilal-btn btn-info">
                            <i class="fas fa-project-diagram"></i> الشجرة البسيطة
                        </a>
                        <a href="@Url.Action("EnhancedTree", "Person", new { familyTreeId = familyTreeId })" class="hilal-btn btn-warning">
                            <i class="fas fa-tree"></i> الشجرة المحسنة
                        </a>
                        <a href="@Url.Action("SamplePage", "Person", new { familyTreeId = familyTreeId })" class="hilal-btn btn-light">
                            <i class="fas fa-tree"></i> الشجرة المبسطة الجديدة
                        </a>
                        <a href="@Url.Action("ComperhensiveTreeView", "Person", new { familyTreeId = familyTreeId })" class="hilal-btn btn-danger">
                            <i class="fas fa-tree"></i> الشجرة الشاملة
                        </a>
                        <a href="@Url.Action("LeafTree", "Person", new { familyTreeId = familyTreeId })" class="hilal-btn btn-primary">
                            <i class="fas fa-tree"></i> الشجرة المبسطة الورقية
                        </a>
                        <a href="@Url.Action("CompareTrees", "Person", new { familyTreeId = familyTreeId })" class="hilal-btn btn-secondary">
                            <i class="fas fa-balance-scale"></i> مقارنة الأشجار
                        </a>
                    </div>
                    <div class="responsive-actions">
                        <a href="@Url.Action("Create", "Person", new { familyTreeId = familyTreeId })" class="hilal-btn btn-primary">
                            <i class="fas fa-plus"></i> إضافة فرد جديد
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="hilal-btn btn-light">
                            <i class="fas fa-arrow-right"></i> العودة للشجرات
                        </a>
                    </div>
                </div>

                @if (sortedPeople != null && sortedPeople.Any())
                {
                    <div class="table-container">
                        <div class="table-responsive">
                            <table class="table hilal-table">
                                <thead>
                                    <tr>
                                        <th>الاسم الكامل</th>
                                        <th>الجنس</th>
                                        <th>تاريخ الميلاد</th>
                                        <th>المهنة</th>
                                        <th>الدولة</th>
                                        <th>الأب</th>
                                        <th>تاريخ الإضافة</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var person in sortedPeople)
                                    {
                                        <tr>
                                            <td><strong>@person.FullName</strong></td>
                                            <td>
                                                <span class="badge @(person.Gender == "Male" ? "bg-primary" : "bg-pink")">
                                                    @(person.Gender == "Male" ? "ذكر" : "أنثى")
                                                </span>
                                            </td>
                                            <td>
                                                @if (person.BirthDate.HasValue)
                                                {
                                                    @person.BirthDate.Value.ToString("yyyy/MM/dd")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير معروف</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(person.Occupation?.Name))
                                                {
                                                    @person.Occupation.Name
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير محدد</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(person.Country?.Name))
                                                {
                                                    @person.Country.Name
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير محدد</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(person.Father?.FullName))
                                                {
                                                    @person.Father.FullName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير محدد</span>
                                                }
                                            </td>
                                            <td>
                                                @if (person.CreatedDate != default(DateTime))
                                                {
                                                    @person.CreatedDate.ToString("yyyy/MM/dd HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير معروف</span>
                                                }
                                            </td>
                                            <td>
                                                @if (person.Id > 0)
                                                {
                                                    <div class="btn-group-custom">
                                                        <a href="@Url.Action("Details", "Person", new { id = person.Id })" class="hilal-btn btn-info btn-sm" title="تفاصيل">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="@Url.Action("Edit", "Person", new { id = person.Id })" class="hilal-btn btn-warning btn-sm" title="تعديل">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a href="@Url.Action("Delete", "Person", new { id = person.Id })" class="hilal-btn btn-danger btn-sm" title="حذف">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">لا توجد إجراءات</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <div class="alert-message alert-info text-center">
                            <i class="fas fa-users"></i>
                            <div>
                                <h4>لا يوجد أفراد</h4>
                                <p class="mb-0">لم يتم إضافة أي أفراد إلى هذه الشجرة بعد.</p>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <a href="@Url.Action("Create", "Person", new { familyTreeId = familyTreeId })" class="hilal-btn btn-primary btn-lg">
                                <i class="fas fa-plus-circle"></i> إضافة أول فرد
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- تأثيرات JavaScript بسيطة -->
    <script>
        // تأثيرات عند التمرير
        document.addEventListener('DOMContentLoaded', function() {
            // إضافة تأثير للجدول
            const tableRows = document.querySelectorAll('.hilal-table tbody tr');
            tableRows.forEach((row, index) => {
                row.style.opacity = '0';
                row.style.transform = 'translateX(50px)';

                setTimeout(() => {
                    row.style.transition = 'all 0.5s ease';
                    row.style.opacity = '1';
                    row.style.transform = 'translateX(0)';
                }, index * 100);
            });

            // تأثير للأزرار
            const buttons = document.querySelectorAll('.hilal-btn');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-3px) scale(1.02)';
                });

                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });
        });

        // تأثير للشعار الهلالي
        const crescent = document.querySelector('.crescent-design');
        if (crescent) {
            crescent.addEventListener('mouseover', function() {
                this.style.transform = 'scale(1.1)';
                this.style.transition = 'transform 0.3s ease';
            });

            crescent.addEventListener('mouseout', function() {
                this.style.transform = 'scale(1)';
            });
        }
    </script>
</body>
</html>