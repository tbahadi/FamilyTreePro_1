@model FamilyTreePro.ViewModels.CreatePersonViewModel
@{
    ViewData["Title"] = "إضافة فرد جديد";
}

<style>
    /* نفس الأنماط السابقة */
    .form-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 15px 50px rgba(0,0,0,0.1);
        padding: 40px;
        margin-bottom: 30px;
        border: 1px solid #e9ecef;
    }

    .form-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 25px;
        border-radius: 15px 15px 0 0;
        margin: -40px -40px 40px -40px;
        text-align: center;
    }

    .dynamic-form {
        transition: all 0.3s ease;
    }

    .form-section {
        margin-bottom: 30px;
        padding: 25px;
        background: #f8f9fa;
        border-radius: 15px;
        border: 2px solid #e9ecef;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 8px;
        color: #2d3748;
        font-size: 0.95rem;
    }

    .required-field::after {
        content: " *";
        color: #e53e3e;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #fff;
    }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            background: #fafbff;
        }

    .gender-section {
        background: #f7fafc;
        padding: 25px;
        border-radius: 15px;
        border: 2px solid #e2e8f0;
        margin: 20px 0;
    }

    .gender-options {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-top: 15px;
    }

    .gender-btn {
        padding: 20px;
        border: 3px solid #e2e8f0;
        border-radius: 15px;
        background: white;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 140px;
    }

        .gender-btn.male {
            border-color: #4299e1;
            color: #4299e1;
        }

        .gender-btn.female {
            border-color: #ed64a6;
            color: #ed64a6;
        }

    .btn-check:checked + .gender-btn.male {
        background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
        color: white;
        border-color: #3182ce;
        transform: scale(1.05);
        box-shadow: 0 10px 25px rgba(66, 153, 225, 0.3);
    }

    .btn-check:checked + .gender-btn.female {
        background: linear-gradient(135deg, #ed64a6 0%, #d53f8c 100%);
        color: white;
        border-color: #d53f8c;
        transform: scale(1.05);
        box-shadow: 0 10px 25px rgba(237, 100, 166, 0.3);
    }

    .father-selection {
        background: #fffaf0;
        padding: 25px;
        border-radius: 15px;
        border: 2px dashed #f6ad55;
        margin: 20px 0;
        text-align: center;
    }

    .smart-field {
        background: #f0fff4;
        padding: 15px;
        border-radius: 10px;
        border-left: 4px solid #48bb78;
        margin-bottom: 15px;
    }

    .smart-note {
        font-size: 0.85rem;
        color: #38a169;
        margin-top: 5px;
        font-style: italic;
    }

    .actions-section {
        text-align: center;
        padding: 30px 0 10px;
        border-top: 2px solid #e2e8f0;
        margin-top: 20px;
    }

    .btn-save {
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        color: white;
        border: none;
        padding: 15px 40px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(72, 187, 120, 0.4);
        }

    .info-message {
        background: #e6fffa;
        border: 2px solid #81e6d9;
        border-radius: 10px;
        padding: 15px;
        margin: 15px 0;
        text-align: center;
    }

    .hidden-section {
        display: none;
    }

    .fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    .date-section {
        background: #fffaf0;
        padding: 25px;
        border-radius: 15px;
        border: 2px dashed #f6ad55;
        margin: 20px 0;
    }

    .additional-info {
        background: #f0f4ff;
        padding: 25px;
        border-radius: 15px;
        border: 2px solid #c3dafe;
        margin: 20px 0;
    }

    .validation-error {
        color: #e53e3e;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* تحسينات للشاشات الصغيرة */
    @@media (max-width: 768px) {
        .form-container {
            padding: 20px;
            margin: 10px;
        }

        .form-header {
            margin: -20px -20px 30px -20px;
            padding: 20px;
        }

        .form-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .gender-options {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="container mt-4" dir="rtl">
    <div class="form-container">
        <div class="form-header">
            <h1 class="mb-3">
                <i class="fas fa-user-plus me-3"></i>إضافة فرد جديد للشجرة العائلية
            </h1>
            <p class="mb-0 opacity-90">اختر الأب أولاً ثم املأ البيانات المطلوبة</p>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Create" method="post" id="personForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="FamilyTreeId" />

            <!-- قسم اختيار الأب -->
            <div class="father-selection">
                <h4 class="mb-4">
                    <i class="fas fa-users me-2"></i>اختر الأب من الشجرة
                </h4>

                <div class="form-group">
                    <label class="form-label required-field">الأب (من أفراد هذه الشجرة)</label>
                    <select class="form-select" id="fatherSelect" style="max-width: 500px; margin: 0 auto;" required>
                        <option value="">-- اختر الأب --</option>
                        <option value="none">-- بدون أب (فرد جديد) --</option>
                        @if (ViewBag.PotentialFathers != null)
                        {
                            foreach (var father in ViewBag.PotentialFathers)
                            {
                                <option value="@father.Id"
                                        data-firstname="@father.FirstName"
                                        data-fathername="@father.FatherName"
                                        data-grandfathername="@father.GrandFatherName"
                                        data-lastname="@father.LastName">
                                    @father.FullName
                                </option>
                            }
                        }
                    </select>
                    <small class="text-muted">اختر "بدون أب" لإضافة فرد جديد كامل المعلومات</small>
                    <div class="validation-error" id="fatherSelectError"></div>
                </div>
            </div>

            <!-- الواجهة الديناميكية -->
            <div class="dynamic-form" id="dynamicForm" style="display: none;">

                <!-- حالة عدم وجود أب - عرض جميع الحقول -->
                <div class="hidden-section" id="noFatherSection">
                    <div class="info-message">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>إضافة فرد جديد كامل المعلومات</strong>
                        <p class="mb-0 mt-1">سيتم إضافة هذا الفرد كجذر جديد في الشجرة العائلية</p>
                    </div>

                    <div class="form-section">
                        <h4 class="mb-4">
                            <i class="fas fa-id-card me-2"></i>المعلومات الشخصية الكاملة
                        </h4>

                        <div class="form-grid">
                            <div class="form-group">
                                <label class="form-label required-field">الاسم الأول</label>
                                <input type="text" class="form-control" id="firstNameNoFather" placeholder="أدخل الاسم الأول" />
                                <div class="validation-error" id="firstNameNoFatherError"></div>
                            </div>

                            <div class="form-group">
                                <label class="form-label required-field">اسم الأب</label>
                                <input type="text" class="form-control" id="fatherNameNoFather" placeholder="اسم الأب" />
                                <div class="validation-error" id="fatherNameNoFatherError"></div>
                            </div>

                            <div class="form-group">
                                <label class="form-label required-field">اسم الجد</label>
                                <input type="text" class="form-control" id="grandFatherNameNoFather" placeholder="اسم الجد" />
                                <div class="validation-error" id="grandFatherNameNoFatherError"></div>
                            </div>

                            <div class="form-group">
                                <label class="form-label required-field">اسم العائلة</label>
                                <input type="text" class="form-control" id="lastNameNoFather" placeholder="اسم العائلة" />
                                <div class="validation-error" id="lastNameNoFatherError"></div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">اللقب</label>
                                <input type="text" class="form-control" id="nicknameNoFather" placeholder="اللقب (اختياري)" />
                            </div>
                        </div>

                        <!-- حقل الجنس -->
                        <div class="gender-section">
                            <label class="form-label required-field" style="font-size: 1.1rem;">الجنس</label>
                            <div class="gender-options">
                                <div class="gender-option">
                                    <input type="radio" id="Gender_Male_NoFather" name="Gender" value="Male" class="btn-check" checked>
                                    <label class="gender-btn male" for="Gender_Male_NoFather">
                                        <i class="fas fa-mars gender-icon"></i>
                                        <span style="font-weight: 600; font-size: 1.1rem;">ذكر</span>
                                        <small class="text-muted mt-1">(محدد افتراضي)</small>
                                    </label>
                                </div>
                                <div class="gender-option">
                                    <input type="radio" id="Gender_Female_NoFather" name="Gender" value="Female" class="btn-check">
                                    <label class="gender-btn female" for="Gender_Female_NoFather">
                                        <i class="fas fa-venus gender-icon"></i>
                                        <span style="font-weight: 600; font-size: 1.1rem;">أنثى</span>
                                    </label>
                                </div>
                            </div>
                            <div class="validation-error" id="genderError"></div>
                        </div>
                    </div>
                </div>

                <!-- حالة وجود أب - عرض الاسم الأول فقط -->
                <div class="hidden-section" id="withFatherSection">
                    <div class="info-message">
                        <i class="fas fa-users me-2"></i>
                        <strong>إضافة ابن للعائلة</strong>
                        <p class="mb-0 mt-1" id="fatherInfo">سيتم أخذ باقي المعلومات من الأب المحدد تلقائياً</p>
                    </div>

                    <div class="form-section">
                        <h4 class="mb-4">
                            <i class="fas fa-user me-2"></i>معلومات الابن
                        </h4>

                        <div class="form-grid">
                            <div class="form-group">
                                <label class="form-label required-field">الاسم الأول</label>
                                <input type="text" class="form-control" id="firstNameWithFather" placeholder="أدخل الاسم الأول فقط" />
                                <div class="validation-error" id="firstNameWithFatherError"></div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">اسم الأب</label>
                                <input type="text" class="form-control" id="displayFatherName" readonly style="background: #f7fafc;">
                                <small class="text-muted">سيؤخذ تلقائياً من الأب المحدد</small>
                            </div>

                            <div class="form-group">
                                <label class="form-label">اسم الجد</label>
                                <input type="text" class="form-control" id="displayGrandFatherName" readonly style="background: #f7fafc;">
                                <small class="text-muted">سيؤخذ تلقائياً من الأب المحدد</small>
                            </div>

                            <div class="form-group">
                                <label class="form-label">اسم العائلة</label>
                                <input type="text" class="form-control" id="displayLastName" readonly style="background: #f7fafc;">
                                <small class="text-muted">سيؤخذ تلقائياً من الأب المحدد</small>
                            </div>

                            <div class="form-group">
                                <label class="form-label">اللقب</label>
                                <input type="text" class="form-control" id="nicknameWithFather" placeholder="اللقب (اختياري)" />
                            </div>
                        </div>

                        <!-- حقل الجنس -->
                        <div class="gender-section">
                            <label class="form-label required-field" style="font-size: 1.1rem;">الجنس</label>
                            <div class="gender-options">
                                <div class="gender-option">
                                    <input type="radio" id="Gender_Male_WithFather" name="Gender" value="Male" class="btn-check" checked>
                                    <label class="gender-btn male" for="Gender_Male_WithFather">
                                        <i class="fas fa-mars gender-icon"></i>
                                        <span style="font-weight: 600; font-size: 1.1rem;">ذكر</span>
                                        <small class="text-muted mt-1">(محدد افتراضي)</small>
                                    </label>
                                </div>
                                <div class="gender-option">
                                    <input type="radio" id="Gender_Female_WithFather" name="Gender" value="Female" class="btn-check">
                                    <label class="gender-btn female" for="Gender_Female_WithFather">
                                        <i class="fas fa-venus gender-icon"></i>
                                        <span style="font-weight: 600; font-size: 1.1rem;">أنثى</span>
                                    </label>
                                </div>
                            </div>
                            <div class="validation-error" id="genderError2"></div>
                        </div>
                    </div>
                </div>

                <!-- قسم تاريخ الميلاد -->
                <div class="date-section">
                    <h4 class="mb-4">
                        <i class="fas fa-calendar-alt me-2"></i>تاريخ الميلاد
                    </h4>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">تاريخ الميلاد</label>
                            <input type="date" class="form-control" id="birthDate" />
                        </div>
                    </div>
                </div>

                <!-- المعلومات الإضافية المشتركة -->
                <div class="form-section">
                    <h4 class="mb-4">
                        <i class="fas fa-info-circle me-2"></i>معلومات إضافية
                    </h4>

                    <div class="form-grid">
                        <div class="smart-field">
                            <label class="form-label">المهنة</label>
                            <select class="form-select" id="occupationId">
                                <option value="" selected>غير محدد</option>
                                @if (ViewBag.Occupations != null)
                                {
                                    foreach (var occupation in ViewBag.Occupations)
                                    {
                                        <option value="@occupation.Id">@occupation.Name</option>
                                    }
                                }
                            </select>
                            <div class="smart-note">✓ محدد تلقائياً كـ "غير محدد"</div>
                        </div>

                        <div class="smart-field">
                            <label class="form-label">الدولة</label>
                            <select class="form-select" id="countryId">
                                <option value="">اختر الدولة</option>
                                @if (ViewBag.Countries != null)
                                {
                                    foreach (var country in ViewBag.Countries)
                                    {
                                        if (country.Name.Contains("السعودية") || country.Name.Contains("Saudi"))
                                        {
                                            <option value="@country.Id" selected>@country.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@country.Id">@country.Name</option>
                                        }
                                    }
                                }
                            </select>
                            <div class="smart-note">✓ محدد تلقائياً كـ "السعودية"</div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">المدينة</label>
                            <input type="text" class="form-control" asp-for="City" placeholder="المدينة" />
                            <span asp-validation-for="City" class="validation-error"></span>
                        </div>
                    </div>

                    <!-- الملاحظات -->
                    <div class="form-group">
                        <label class="form-label">ملاحظات</label>
                        <textarea class="form-control" asp-for="Notes" rows="4"
                                  placeholder="أي معلومات إضافية عن الشخص...">@(Model.Notes ?? "لا توجد ملاحظات")</textarea>
                        <span asp-validation-for="Notes" class="validation-error"></span>
                        <div class="mt-2">
                            <small class="text-muted"><strong>اقتراحات للملاحظات:</strong></small><br>
                            <small class="text-muted">• مواليد عام ١٩٨٠ وتوفي عام ٢٠٢٠</small><br>
                            <small class="text-muted">• عمل في التجارة وكان معروفاً بالصدق</small><br>
                           
                        </div>
                    </div>
                </div>

                <!-- حقول مخفية للبيانات المرسلة -->
                <input type="hidden" name="FirstName" id="hiddenFirstName" />
                <input type="hidden" name="FatherName" id="hiddenFatherName" />
                <input type="hidden" name="GrandFatherName" id="hiddenGrandFatherName" />
                <input type="hidden" name="LastName" id="hiddenLastName" />
                <input type="hidden" name="Nickname" id="hiddenNickname" />
                <input type="hidden" name="FatherId" id="hiddenFatherId" />
                <input type="hidden" name="BirthDate" id="hiddenBirthDate" />
                <input type="hidden" name="OccupationId" id="hiddenOccupationId" />
                <input type="hidden" name="CountryId" id="hiddenCountryId" />
                <input type="hidden" name="City" id="hiddenCity" />
                <input type="hidden" name="Notes" id="hiddenNotes" />
            </div>

            <!-- أزرار الإجراءات -->
            <div class="actions-section">
                <button type="submit" class="btn-save" id="submitBtn">
                    <i class="fas fa-save me-2"></i>حفظ الفرد الجديد
                </button>
                <a asp-action="Index" asp-route-familyTreeId="@Model.FamilyTreeId" class="btn btn-secondary">
                    <i class="fas fa-arrow-right me-2"></i> رجوع للقائمة
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fatherSelect = document.getElementById('fatherSelect');
            const dynamicForm = document.getElementById('dynamicForm');
            const submitBtn = document.getElementById('submitBtn');

            // تحديث الواجهة عند اختيار الأب
            fatherSelect.addEventListener('change', function() {
                const selectedValue = this.value;
                const selectedOption = this.options[this.selectedIndex];

                // إخفاء جميع الأقسام أولاً
                document.getElementById('noFatherSection').style.display = 'none';
                document.getElementById('withFatherSection').style.display = 'none';
                dynamicForm.style.display = 'none';

                if (selectedValue === '') {
                    return;
                }

                dynamicForm.style.display = 'block';

                if (selectedValue === 'none') {
                    // حالة بدون أب
                    document.getElementById('noFatherSection').style.display = 'block';

                    // تنظيف الحقول
                    document.getElementById('firstNameNoFather').value = '';
                    document.getElementById('fatherNameNoFather').value = '';
                    document.getElementById('grandFatherNameNoFather').value = '';
                    document.getElementById('lastNameNoFather').value = '';
                    document.getElementById('nicknameNoFather').value = '';

                } else {
                    // حالة مع أب
                    document.getElementById('withFatherSection').style.display = 'block';

                    // تعبئة بيانات الأب في الحقول المعروضة
                    const fatherFirstName = selectedOption.getAttribute('data-firstname');
                    const fatherFatherName = selectedOption.getAttribute('data-fathername');
                    const fatherGrandFatherName = selectedOption.getAttribute('data-grandfathername');
                    const fatherLastName = selectedOption.getAttribute('data-lastname');

                    document.getElementById('displayFatherName').value = fatherFirstName;
                    document.getElementById('displayGrandFatherName').value = fatherFatherName;
                    document.getElementById('displayLastName').value = fatherLastName;

                    // تنظيف حقل الاسم الأول
                    document.getElementById('firstNameWithFather').value = '';
                    document.getElementById('nicknameWithFather').value = '';
                }
            });

            // التحقق من النموذج قبل الإرسال
            document.getElementById('personForm').addEventListener('submit', function(e) {
                const selectedValue = fatherSelect.value;

                if (!selectedValue) {
                    e.preventDefault();
                    alert('يرجى اختيار الأب أولاً');
                    return false;
                }

                let isValid = true;

                if (selectedValue === 'none') {
                    // التحقق من حالة بدون أب
                    const firstName = document.getElementById('firstNameNoFather').value.trim();
                    const fatherName = document.getElementById('fatherNameNoFather').value.trim();
                    const grandFatherName = document.getElementById('grandFatherNameNoFather').value.trim();
                    const lastName = document.getElementById('lastNameNoFather').value.trim();

                    if (!firstName) { alert('الاسم الأول مطلوب'); isValid = false; }
                    else if (!fatherName) { alert('اسم الأب مطلوب'); isValid = false; }
                    else if (!grandFatherName) { alert('اسم الجد مطلوب'); isValid = false; }
                    else if (!lastName) { alert('اسم العائلة مطلوب'); isValid = false; }

                    if (isValid) {
                        // تعيين القيم في الحقول المخفية للإرسال
                        document.getElementById('hiddenFirstName').value = firstName;
                        document.getElementById('hiddenFatherName').value = fatherName;
                        document.getElementById('hiddenGrandFatherName').value = grandFatherName;
                        document.getElementById('hiddenLastName').value = lastName;
                        document.getElementById('hiddenNickname').value = document.getElementById('nicknameNoFather').value;
                        document.getElementById('hiddenFatherId').value = ''; // لا يوجد أب
                    }

                } else {
                    // التحقق من حالة مع أب
                    const firstName = document.getElementById('firstNameWithFather').value.trim();

                    if (!firstName) {
                        alert('الاسم الأول مطلوب');
                        isValid = false;
                    }

                    if (isValid) {
                        // تعيين القيم في الحقول المخفية للإرسال
                        const selectedOption = fatherSelect.options[fatherSelect.selectedIndex];

                        document.getElementById('hiddenFirstName').value = firstName;
                        document.getElementById('hiddenFatherName').value = selectedOption.getAttribute('data-firstname');
                        document.getElementById('hiddenGrandFatherName').value = selectedOption.getAttribute('data-fathername');
                        document.getElementById('hiddenLastName').value = selectedOption.getAttribute('data-lastname');
                        document.getElementById('hiddenNickname').value = document.getElementById('nicknameWithFather').value;
                        document.getElementById('hiddenFatherId').value = selectedValue;
                    }
