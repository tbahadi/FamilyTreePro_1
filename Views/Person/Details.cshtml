@model FamilyTreePro.Models.Person

@{
    ViewData["Title"] = "تفاصيل الفرد";
}

<div class="container mt-4" dir="rtl">
    <h2 class="text-center mb-4">تفاصيل الفرد</h2>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>@Model.FullName</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>المعلومات الشخصية</h5>
                    <p><strong>الاسم الأول:</strong> @Model.FirstName</p>
                    <p><strong>اسم الأب:</strong> @Model.FatherName</p>
                    <p><strong>اسم الجد:</strong> @Model.GrandFatherName</p>
                    <p><strong>اسم العائلة:</strong> @Model.LastName</p>
                    <p><strong>اللقب:</strong> @(Model.Nickname ?? "لا يوجد")</p>
                    <p><strong>الجنس:</strong> @(Model.Gender == "Male" ? "ذكر" : "أنثى")</p>
                </div>
                <div class="col-md-6">
                    <h5>معلومات إضافية</h5>
                    <p><strong>تاريخ الميلاد:</strong> @(Model.BirthDate?.ToString("yyyy/MM/dd") ?? "غير معروف")</p>
                    <p><strong>المهنة:</strong> @(Model.Occupation?.Name ?? "غير محدد")</p>
                    <p><strong>الدولة:</strong> @(Model.Country?.Name ?? "غير محدد")</p>
                    <p><strong>المدينة:</strong> @(Model.City ?? "غير محدد")</p>
                    <p><strong>الأب:</strong> @(Model.Father?.FullName ?? "غير محدد")</p>
                    <p><strong>تاريخ الإضافة:</strong> @Model.CreatedDate.ToString("yyyy/MM/dd")</p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="mt-3">
                    <h5>ملاحظات</h5>
                    <p>@Model.Notes</p>
                </div>
            }
        </div>
        <div class="card-footer">
            <a href="@Url.Action("Index", "Person", new { familyTreeId = Model.FamilyTreeId })" class="btn btn-secondary">
                <i class="fas fa-arrow-right"></i> العودة للقائمة
            </a>
            <a href="@Url.Action("Edit", "Person", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit"></i> تعديل
            </a>
        </div>
    </div>
</div>