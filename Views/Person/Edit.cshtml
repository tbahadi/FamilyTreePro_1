@model FamilyTreePro.ViewModels.EditPersonViewModel
@{
    ViewData["Title"] = "تعديل فرد";

    // تحديد الألوان بناءً على الجنس
    var headerBackground = Model.Gender == "Male"
        ? "background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);"
        : "background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);";

    var headerIcon = Model.Gender == "Male"
        ? "fas fa-mars"
        : "fas fa-venus";

    var genderText = Model.Gender == "Male" ? "ذكر" : "أنثى";
}

<style>
    .gender-selection {
        margin: 20px 0;
    }

    .gender-option {
        text-align: center;
        margin-bottom: 10px;
    }

    .gender-btn {
        width: 100%;
        height: 120px;
        border: 3px solid #dee2e6;
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        padding: 20px;
        cursor: pointer;
    }

    .male-btn {
        color: #007bff;
        border-color: #007bff;
    }

    .female-btn {
        color: #e91e63;
        border-color: #e91e63;
    }

    .btn-check:checked + .male-btn {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        color: white;
        border-color: #0056b3;
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
    }

    .btn-check:checked + .female-btn {
        background: linear-gradient(135deg, #e91e63 0%, #c2185b 100%);
        color: white;
        border-color: #c2185b;
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(233, 30, 99, 0.3);
    }

    .gender-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .gender-btn i {
        transition: all 0.3s ease;
    }

    .btn-check:checked + .gender-btn i {
        transform: scale(1.2);
    }

    .form-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        padding: 30px;
        margin-bottom: 30px;
    }

    .form-header {
        color: white;
        padding: 20px;
        border-radius: 10px 10px 0 0;
        margin: -30px -30px 30px -30px;
        transition: all 0.3s ease;
    }

    .male-header {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }

    .female-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .required-field::after {
        content: " *";
        color: #dc3545;
    }

    /* تحسينات للشاشات الصغيرة */
    @@media (max-width: 768px) {
        .gender-btn {
            height: 100px;
            padding: 15px;
            font-size: 1rem;
        }

            .gender-btn i {
                font-size: 1.5rem;
            }

        .form-container {
            padding: 20px;
        }

        .form-header {
            margin: -20px -20px 20px -20px;
            padding: 15px;
        }
    }

    @@media (max-width: 576px) {
        .gender-btn {
            height: 90px;
            padding: 12px;
            font-size: 0.9rem;
        }

            .gender-btn i {
                font-size: 1.3rem;
            }
    }
</style>

<div class="container mt-4" dir="rtl">
    <div class="form-container">
        <!-- الهيدر الديناميكي -->
        <div class="form-header @(Model.Gender == "Male" ? "male-header" : "female-header")">
            <h2 class="text-center mb-0">
                <i class="@headerIcon me-2"></i>تعديل فرد
            </h2>
            <p class="text-center mb-0 mt-2 opacity-75">
                @Model.FullName
                <span class="badge bg-light text-dark ms-2">@genderText</span>
            </p>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Edit" method="post" class="row g-3" id="editForm">
            @Html.AntiForgeryToken()

            <!-- حقول مخفية -->
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FamilyTreeId" />

            <!-- المعلومات الأساسية -->
            <div class="col-12">
                <h5 class="border-bottom pb-2 mb-4">
                    <i class="fas fa-info-circle me-2 text-primary"></i>المعلومات الأساسية
                </h5>
            </div>

            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label required-field">الاسم الأول</label>
                <input asp-for="FirstName" class="form-control" required />
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="FatherName" class="form-label required-field">اسم الأب</label>
                <input asp-for="FatherName" class="form-control" required />
                <span asp-validation-for="FatherName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="GrandFatherName" class="form-label required-field">اسم الجد</label>
                <input asp-for="GrandFatherName" class="form-control" required />
                <span asp-validation-for="GrandFatherName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="LastName" class="form-label required-field">اسم العائلة</label>
                <input asp-for="LastName" class="form-control" required />
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Nickname" class="form-label">اللقب</label>
                <input asp-for="Nickname" class="form-control" />
                <span asp-validation-for="Nickname" class="text-danger small"></span>
            </div>

            <!-- حقل الجنس -->
            <div class="col-12">
                <div class="gender-selection">
                    <label class="form-label fw-bold required-field">الجنس</label>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="gender-option">
                                <input type="radio" id="Gender_Male" name="Gender" value="Male"
                                       @(Model.Gender == "Male" ? "checked" : "") class="btn-check" required>
                                <label class="btn btn-outline-primary gender-btn male-btn" for="Gender_Male">
                                    <i class="fas fa-mars fa-2x mb-2"></i>
                                    <span class="d-block">ذكر</span>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="gender-option">
                                <input type="radio" id="Gender_Female" name="Gender" value="Female"
                                       @(Model.Gender == "Female" ? "checked" : "") class="btn-check" required>
                                <label class="btn btn-outline-danger gender-btn female-btn" for="Gender_Female">
                                    <i class="fas fa-venus fa-2x mb-2"></i>
                                    <span class="d-block">أنثى</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Gender" class="text-danger small d-block mt-2"></span>
                </div>
            </div>

            <!-- المعلومات الشخصية -->
            <div class="col-12 mt-4">
                <h5 class="border-bottom pb-2 mb-4">
                    <i class="fas fa-user-tie me-2 text-success"></i>المعلومات الشخصية
                </h5>
            </div>

            <div class="col-md-6">
                <label asp-for="BirthDate" class="form-label">تاريخ الميلاد</label>
                <input asp-for="BirthDate" type="date" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="DeathDate" class="form-label">تاريخ الوفاة</label>
                <input asp-for="DeathDate" type="date" class="form-control" />
                <span asp-validation-for="DeathDate" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="OccupationId" class="form-label">المهنة</label>
                <select asp-for="OccupationId" class="form-select">
                    <option value="">اختر المهنة</option>
                    @if (ViewBag.Occupations != null)
                    {
                        foreach (var occupation in ViewBag.Occupations)
                        {
                            <option value="@occupation.Id" selected="@(Model.OccupationId == occupation.Id)">@occupation.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="OccupationId" class="text-danger small"></span>
            </div>

            <!-- العنوان -->
            <div class="col-md-6">
                <label asp-for="CountryId" class="form-label">الدولة</label>
                <select asp-for="CountryId" class="form-select">
                    <option value="">اختر الدولة</option>
                    @if (ViewBag.Countries != null)
                    {
                        foreach (var country in ViewBag.Countries)
                        {
                            <option value="@country.Id" selected="@(Model.CountryId == country.Id)">@country.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="CountryId" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="City" class="form-label">المدينة</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger small"></span>
            </div>

            <!-- العلاقات العائلية -->
            <div class="col-12 mt-4">
                <h5 class="border-bottom pb-2 mb-4">
                    <i class="fas fa-users me-2 text-warning"></i>العلاقات العائلية
                </h5>
            </div>

            <div class="col-12">
                <label asp-for="FatherId" class="form-label">الأب (من أفراد هذه الشجرة)</label>
                <select asp-for="FatherId" class="form-select">
                    <option value="">-- اختر الأب --</option>
                    @if (ViewBag.PotentialFathers != null)
                    {
                        foreach (var father in ViewBag.PotentialFathers)
                        {
                            <option value="@father.Id" selected="@(Model.FatherId == father.Id)">@father.FullName</option>
                        }
                    }
                </select>
                <small class="form-text text-muted">اترك هذا الحقل فارغاً إذا كان هذا الشخص هو الجذر (بدون أب)</small>
                <span asp-validation-for="FatherId" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="MotherId" class="form-label">الأم (من أفراد هذه الشجرة)</label>
                <select asp-for="MotherId" class="form-select">
                    <option value="">-- اختر الأم --</option>
                    @if (ViewBag.PotentialMothers != null)
                    {
                        foreach (var mother in ViewBag.PotentialMothers)
                        {
                            <option value="@mother.Id" selected="@(Model.MotherId == mother.Id)">@mother.FullName</option>
                        }
                    }
                </select>
                <small class="form-text text-muted">اترك هذا الحقل فارغاً إذا كانت الأم غير معروفة</small>
                <span asp-validation-for="MotherId" class="text-danger small"></span>
            </div>

            <!-- معلومات إضافية -->
            <div class="col-12 mt-4">
                <h5 class="border-bottom pb-2 mb-4">
                    <i class="fas fa-sticky-note me-2 text-info"></i>معلومات إضافية
                </h5>
            </div>

            <div class="col-12">
                <label asp-for="Notes" class="form-label">ملاحظات</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="AdditionReason" class="form-label">سبب الإضافة</label>
                <textarea asp-for="AdditionReason" class="form-control" rows="2" placeholder="سبب إضافة هذا الفرد..."></textarea>
                <span asp-validation-for="AdditionReason" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="IsOriginalRecord" class="form-label">هل هو سجل أصلي؟</label>
                <div class="form-check form-switch">
                    <input asp-for="IsOriginalRecord" class="form-check-input" type="checkbox" role="switch">
                    <label class="form-check-label" for="IsOriginalRecord">سجل أصلي</label>
                </div>
                <span asp-validation-for="IsOriginalRecord" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="IsConnectionPoint" class="form-label">نقطة اتصال؟</label>
                <div class="form-check form-switch">
                    <input asp-for="IsConnectionPoint" class="form-check-input" type="checkbox" role="switch">
                    <label class="form-check-label" for="IsConnectionPoint">نقطة اتصال مع شجرة أخرى</label>
                </div>
                <span asp-validation-for="IsConnectionPoint" class="text-danger small"></span>
            </div>

            <!-- أزرار الإجراءات -->
            <div class="col-12 mt-5">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div>
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fas fa-save me-2"></i>حفظ التعديلات
                        </button>
                        <button type="reset" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-redo me-2"></i>إعادة تعيين
                        </button>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-2">
                            <i class="fas fa-eye me-2"></i>عرض التفاصيل
                        </a>
                        <a asp-action="Index" asp-route-familyTreeId="@Model.FamilyTreeId" class="btn btn-secondary">
                            <i class="fas fa-arrow-right me-2"></i> رجوع للقائمة
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('editForm');
            const genderInputs = document.querySelectorAll('input[name="Gender"]');
            const formHeader = document.querySelector('.form-header');

            // تحديث اللون عند تغيير الجنس
            genderInputs.forEach(input => {
                input.addEventListener('change', function() {
                    const isMale = this.value === 'Male';

                    // تحديث كلاس الهيدر
                    if (isMale) {
                        formHeader.classList.remove('female-header');
                        formHeader.classList.add('male-header');
                    } else {
                        formHeader.classList.remove('male-header');
                        formHeader.classList.add('female-header');
                    }

                    // تحديث الأيقونة في الهيدر
                    const headerIcon = formHeader.querySelector('i');
                    if (isMale) {
                        headerIcon.className = 'fas fa-mars me-2';
                    } else {
                        headerIcon.className = 'fas fa-venus me-2';
                    }

                    // تحديث نص الجنس في الهيدر
                    const genderBadge = formHeader.querySelector('.badge');
                    if (genderBadge) {
                        genderBadge.textContent = isMale ? 'ذكر' : 'أنثى';
                    }
                });
            });

            // التحقق من الحقول الإلزامية
            form.addEventListener('submit', function(e) {
                const firstName = document.querySelector('#FirstName').value.trim();
                const fatherName = document.querySelector('#FatherName').value.trim();
                const grandFatherName = document.querySelector('#GrandFatherName').value.trim();
                const lastName = document.querySelector('#LastName').value.trim();
                const genderSelected = document.querySelector('input[name="Gender"]:checked');

                let isValid = true;
                let errorMessage = '';

                if (!firstName) {
                    isValid = false;
                    errorMessage += '• الاسم الأول مطلوب\n';
                }

                if (!fatherName) {
                    isValid = false;
                    errorMessage += '• اسم الأب مطلوب\n';
                }

                if (!grandFatherName) {
                    isValid = false;
                    errorMessage += '• اسم الجد مطلوب\n';
                }

                if (!lastName) {
                    isValid = false;
                    errorMessage += '• اسم العائلة مطلوب\n';
                }

                if (!genderSelected) {
                    isValid = false;
                    errorMessage += '• يجب اختيار الجنس\n';
                }

                if (!isValid) {
                    e.preventDefault();
                    alert('يرجى تصحيح الأخطاء التالية:\n\n' + errorMessage);
                    return false;
                }
            });

            // تأثيرات تفاعلية للـ Radio Buttons
            genderInputs.forEach(input => {
                input.addEventListener('change', function() {
                    const genderText = this.value === 'Male' ? 'ذكر' : 'أنثى';
                    console.log(`تم تغيير الجنس إلى: ${genderText}`);

                    // إضافة تأثير مرئي إضافي
                    const allLabels = document.querySelectorAll('.gender-btn');
                    allLabels.forEach(label => label.classList.remove('active-gender'));

                    const currentLabel = document.querySelector(`label[for="${this.id}"]`);
                    currentLabel.classList.add('active-gender');
                });
            });

            // تعيين القيم المختارة حالياً في القوائم المنسدلة
            const occupationSelect = document.querySelector('#OccupationId');
            const countrySelect = document.querySelector('#CountryId');
            const fatherSelect = document.querySelector('#FatherId');
            const motherSelect = document.querySelector('#MotherId');

            if (occupationSelect && '@Model.OccupationId' > 0) {
                occupationSelect.value = '@Model.OccupationId';
            }

            if (countrySelect && '@Model.CountryId' > 0) {
                countrySelect.value = '@Model.CountryId';
            }

            if (fatherSelect && '@Model.FatherId' > 0) {
                fatherSelect.value = '@Model.FatherId';
            }

            if (motherSelect && '@Model.MotherId' > 0) {
                motherSelect.value = '@Model.MotherId';
            }

            // التركيز التلقائي على أول حقل
            setTimeout(() => {
                const firstNameInput = document.querySelector('#FirstName');
                if (firstNameInput) {
                    firstNameInput.focus();
                    firstNameInput.select();
                }
            }, 500);

            // تحسين إمكانية الوصول للـ Radio Buttons
            genderInputs.forEach(input => {
                input.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        this.checked = true;
                        const label = document.querySelector(`label[for="${this.id}"]`);
                        if (label) {
                            label.click();
                        }
                    }
                });
            });
        });

        // تأثيرات CSS إضافية
        const style = document.createElement('style');
        style.textContent = `
            .active-gender {
                animation: genderPulse 0.6s ease-in-out;
            }

            @@keyframes genderPulse {
                0% { transform: scale(1); }
                50% { transform: scale(1.08); }
                100% { transform: scale(1.05); }
            }

            .form-control:focus, .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

            .btn-check:focus + .gender-btn {
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

            .male-header .btn-check:focus + .gender-btn {
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

            .female-header .btn-check:focus + .gender-btn {
                box-shadow: 0 0 0 0.2rem rgba(233, 30, 99, 0.25);
            }
        `;
        document.head.appendChild(style);
    </script>
}