<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - الشجرة العائلية</title>

    <!-- المكتبات الأساسية -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/hilal-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <!-- التموجات الذهبية -->
    <div class="gold-waves"></div>

    <!-- النجوم -->
    <div class="star star-1"></div>
    <div class="star star-2"></div>
    <div class="star star-3"></div>
    <div class="star star-4"></div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 hilal-navbar">
            <div class="container">
                <a class="navbar-brand hilal-nav-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-tree"></i> الشجرة العائلية
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link hilal-nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> الرئيسية
                            </a>
                        </li>
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link hilal-nav-link" asp-controller="Person" asp-action="Index" asp-route-familyTreeId="1">
                                    <i class="fas fa-users"></i> الأفراد
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link hilal-nav-link" asp-controller="Home" asp-action="DatabaseManagement">
                                    <i class="fas fa-database"></i> إدارة البيانات
                                </a>
                            </li>

                            <!-- قسم الإدارة يظهر فقط للمديرين -->
                            @if (await IsUserAdmin())
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle hilal-nav-link" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-users-cog"></i> الإدارة
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                                <i class="fas fa-users me-2"></i>إدارة المستخدمين
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Statistics">
                                                <i class="fas fa-chart-bar me-2"></i>إحصائيات النظام
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Profile">
                                                <i class="fas fa-user-cog me-2"></i>الملف الشخصي
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <!-- عرض بادئة المدير إذا كان المستخدم مدير -->
                            @if (await IsUserAdmin())
                            {
                                <li class="nav-item">
                                    <span class="nav-link hilal-nav-user text-warning">
                                        <i class="fas fa-crown me-1"></i> مدير النظام
                                    </span>
                                </li>
                            }

                            <li class="nav-item">
                                <span class="nav-link hilal-nav-user">
                                    <i class="fas fa-user me-1"></i> @Context.Session.GetString("Username")
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link hilal-nav-link" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt"></i> تسجيل الخروج
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link hilal-nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> تسجيل الدخول
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link hilal-nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> تسجيل جديد
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container content-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- الفوتر المعدل -->
    <footer class="border-top footer text-muted hilal-footer">
        <div class="container">
            &copy; 2024 - الشجرة العائلية - نظام إدارة الشجرات العائلية
        </div>
    </footer>

    <!-- JavaScript محلي -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/hilal-theme.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)

</body>
</html>
@functions {
    private async Task<bool> IsUserAdmin()
    {
        try
        {
            var userId = Context.Session.GetInt32("UserId");
            if (userId == null) return false;

            var context = Context.RequestServices.GetService(typeof(AppDbContext)) as AppDbContext;
            if (context == null) return false;

            var user = await context.Users.FindAsync(userId);
            return user?.Username.ToLower() == "admin";
        }
        catch
        {
            return false;
        }
    }
}