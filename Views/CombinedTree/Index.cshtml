@model List<FamilyTreePro.Models.CombinedTree>

<div class="container mt-4" dir="rtl">
    <h2 class="text-center mb-4">الشجرات المدمجة</h2>

    <a href="@Url.Action("Create")" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> إنشاء شجرة مدمجة جديدة
    </a>

    <div class="row">
        @foreach (var tree in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-header" style="background-color: @tree.Color;">
                        <h5 class="text-white">@tree.Name</h5>
                    </div>
                    <div class="card-body">
                        <p>@tree.Description</p>
                        <p><strong>عدد الشجرات المدمجة:</strong> @tree.CombinedTrees.Count</p>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("ViewTree", new { id = tree.Id })" class="btn btn-primary btn-sm">
                            <i class="fas fa-eye"></i> عرض الشجرة
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>